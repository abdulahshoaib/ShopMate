<Page
    x:Class="ShopMate.GUI.AddProductPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:ShopMate.GUI.Controls"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <!-- Animations and shared styles consistent with GenerateBillPage -->
    <Page.Resources>
        <Storyboard x:Name="CollapseSidebarStoryboard">
            <DoubleAnimation Storyboard.TargetName="SidebarColumn"
                             Storyboard.TargetProperty="Width.Value"
                             To="60"
                             Duration="0:0:0.25"/>
        </Storyboard>

        <Storyboard x:Name="ExpandSidebarStoryboard">
            <DoubleAnimation Storyboard.TargetName="SidebarColumn"
                             Storyboard.TargetProperty="Width.Value"
                             To="220"
                             Duration="0:0:0.25"/>
        </Storyboard>

        <Style x:Key="ListViewItemStretchStyle" TargetType="ListViewItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="SidebarColumn" Width="170"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <controls:SalesSidebarControl Grid.Column="0"/>

        <!-- Main content -->
        <ScrollViewer Grid.Column="1">
            <StackPanel Padding="40"
                        MaxWidth="720"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Spacing="20">

                <TextBlock Text="Add New Product"
                           FontSize="32"
                           FontWeight="SemiBold"/>
                <TextBlock Text="Create a product record to make it available for billing."
                           FontSize="12"
                           Foreground="Gray"/>

                <Border Background="#0B1220"
                        CornerRadius="12"
                        Padding="20">
                    <StackPanel Spacing="12">
                        <TextBlock Text="Product Details"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Foreground="#E5E7EB"/>

                        <TextBlock Text="Provide product name, price and stock quantity."
                                   FontSize="12"
                                   Foreground="Gray"/>

                        <Grid ColumnSpacing="12" RowSpacing="10" Margin="0,6,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Header="Product Name"
                                     x:Name="ProductNameTextBox"
                                     Grid.Column="0"/>
                        </Grid>

                        <Grid ColumnSpacing="12" RowSpacing="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <NumberBox Header="Price"
                                    x:Name="PriceNumberBox"
                                    SpinButtonPlacementMode="Inline"
                                    Minimum="0"
                                    SmallChange="0.1"/>


                            <NumberBox Header="Quantity in stock"
                                     x:Name="QuantityNumberBox"
                                     SpinButtonPlacementMode="Inline"
                                     Grid.Column="1"/>
                        </Grid>

                        <TextBox Header="Description (optional)"
                                 x:Name="DescriptionTextBox"
                                 AcceptsReturn="True"
                                 Height="80"/>

                        <StackPanel Orientation="Horizontal" Spacing="15" Margin="0,6,0,0">
                            <Button Content="Save Product"
                                    Click="SaveProduct_Click"
                                    Background="#3B82F6"
                                    Foreground="White"
                                    BorderBrush="Transparent"
                                    Padding="14,6"
                                    CornerRadius="6"/>

                            <Button Content="Clear"
                                    Click="Clear_Click"
                                    Background="Transparent"
                                    Foreground="#D1D5DB"
                                    BorderBrush="#334155"
                                    Padding="14,6"
                                    CornerRadius="6"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>