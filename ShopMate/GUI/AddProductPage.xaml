<Page
    x:Class="ShopMate.GUI.AddProductPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="40">
        <StackPanel MaxWidth="600" HorizontalAlignment="Center" VerticalAlignment="Top" Spacing="20">
            <TextBlock Text="Add New Product" FontSize="28" FontWeight="SemiBold"/>
            <TextBlock Text="Add products for quick sale" Foreground="Gray"/>

            <TextBox Header="Product Name" x:Name="ProductNameTextBox"/>
            <TextBox Header="Price" x:Name="PriceTextBox"/>
            <TextBox Header="Quantity" x:Name="QuantityTextBox"/>

            <StackPanel Orientation="Horizontal" Spacing="15">
                <Button Content="Add Product" Click="AddProduct_Click" HorizontalAlignment="Stretch"/>
                <Button Content="Cancel" Click="Cancel_Click" HorizontalAlignment="Stretch"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
