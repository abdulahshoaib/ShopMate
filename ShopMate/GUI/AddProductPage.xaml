<Page
    x:Class="ShopMate.GUI.AddProductPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:ShopMate.GUI.Controls"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <!-- Smooth width animation for the sidebar (same as dashboard) -->
        <Storyboard x:Name="CollapseSidebarStoryboard">
            <DoubleAnimation Storyboard.TargetName="SidebarColumn"
                             Storyboard.TargetProperty="Width.Value"
                             To="60"
                             Duration="0:0:0.25"/>
        </Storyboard>

        <Storyboard x:Name="ExpandSidebarStoryboard">
            <DoubleAnimation Storyboard.TargetName="SidebarColumn"
                             Storyboard.TargetProperty="Width.Value"
                             To="170"
                             Duration="0:0:0.25"/>
        </Storyboard>
    </Page.Resources>

    <!-- MAIN GRID -->
    <Grid>

        <!-- SIDEBAR + CONTENT -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="SidebarColumn" Width="170"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR (exact same placement as dashboard) -->
        <controls:SalesSidebarControl Grid.Column="0"/>

        <!-- MAIN CONTENT -->
        <ScrollViewer Grid.Column="1">
            <StackPanel Padding="40" Spacing="20" MaxWidth="600">

                <!-- Title Section -->
                <TextBlock Text="Add New Product"
                           FontSize="32"
                           FontWeight="SemiBold"/>

                <TextBlock Text="Enter the product details below"
                           Foreground="Gray"
                           FontSize="12"/>

                <!-- Product Fields -->
                <TextBox Header="Product Name" x:Name="ProductNameTextBox"/>
                <TextBox Header="Product Code / SKU" x:Name="SkuTextBox"/>
                <TextBox Header="Category" x:Name="CategoryTextBox"/>
                <TextBox Header="Price" x:Name="PriceTextBox"/>
                <TextBox Header="Quantity" x:Name="QuantityTextBox"/>

                <TextBox Header="Description"
                         x:Name="DescriptionTextBox"
                         AcceptsReturn="True"
                         Height="120"/>

                <!-- Buttons -->
                <StackPanel Orientation="Horizontal" Spacing="15">
                    <Button Content="Save Product"
                            Click="SaveProduct_Click"
                            Padding="14,6"/>

                    <Button Content="Cancel"
                            Click="Cancel_Click"
                            Padding="14,6"/>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>

    </Grid>
</Page>