<Page
    x:Class="ShopMate.GUI.GenerateBillPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:ShopMate.GUI.Controls"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <!-- Animations for sidebar toggle -->
    <Page.Resources>
        <Storyboard x:Name="CollapseSidebarStoryboard">
            <DoubleAnimation Storyboard.TargetName="SidebarColumn"
                             Storyboard.TargetProperty="Width.Value"
                             To="60"
                             Duration="0:0:0.25"/>
        </Storyboard>

        <Storyboard x:Name="ExpandSidebarStoryboard">
            <DoubleAnimation
                Storyboard.TargetName="SidebarColumn"
                Storyboard.TargetProperty="Width.Value"
                To="220"
                Duration="0:0:0.25"/>
        </Storyboard>

        <!-- Makes ListViewItem stretch fully for column alignment -->
        <Style x:Key="ListViewItemStretchStyle" TargetType="ListViewItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0"/>
        </Style>
    </Page.Resources>

    <Grid>
        <!-- Main layout with sidebar + content -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="SidebarColumn" Width="170"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <controls:SalesSidebarControl Grid.Column="0"/>

        <!-- MAIN CONTENT -->
        <ScrollViewer Grid.Column="1">
            <StackPanel Padding="40" Spacing="20">

                <!-- Page Header -->
                <TextBlock Text="Generate Bill"
                           FontSize="32"
                           FontWeight="SemiBold"/>
                <TextBlock Text="Create bills quickly and review billing metrics."
                           FontSize="12"
                           Foreground="Gray"/>

                <!-- KPI Cards -->
                <Grid ColumnSpacing="20" RowSpacing="20" Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Individual KPI cards -->
                    <Border Grid.Column="0" Background="#3B82F6" CornerRadius="18" Padding="18">
                        <StackPanel>
                            <TextBlock Text="Total Sales"   Foreground="White" FontWeight="Bold" FontSize="14"/>
                            <TextBlock Text="$12,452"       Foreground="White" FontSize="22" FontWeight="SemiBold" Margin="0,6,0,0"/>
                            <TextBlock Text="Today"         Foreground="#E6F0FF" FontSize="12" Margin="0,6,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="1" Background="#10B981" CornerRadius="18" Padding="18">
                        <StackPanel>
                            <TextBlock Text="Bills Today"   Foreground="White" FontWeight="Bold" FontSize="14"/>
                            <TextBlock Text="24"            Foreground="White" FontSize="22" FontWeight="SemiBold" Margin="0,6,0,0"/>
                            <TextBlock Text="Created"       Foreground="#EAF7EE" FontSize="12" Margin="0,6,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="2" Background="#8B5CF6" CornerRadius="18" Padding="18">
                        <StackPanel>
                            <TextBlock Text="Active Customers" Foreground="White" FontWeight="Bold" FontSize="14"/>
                            <TextBlock Text="342"              Foreground="White" FontSize="22" FontWeight="SemiBold" Margin="0,6,0,0"/>
                            <TextBlock Text="This Month"       Foreground="#EFE6FF" FontSize="12" Margin="0,6,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="3" Background="#F59E0B" CornerRadius="18" Padding="18">
                        <StackPanel>
                            <TextBlock Text="Outstanding"   Foreground="White" FontWeight="Bold" FontSize="14"/>
                            <TextBlock Text="$1,230"        Foreground="White" FontSize="22" FontWeight="SemiBold" Margin="0,6,0,0"/>
                            <TextBlock Text="Unpaid"        Foreground="#FFF7E6" FontSize="12" Margin="0,6,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- BILL CREATION AREA -->
                <Grid Margin="0,20,0,0" ColumnSpacing="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- LEFT SECTION: Add items -->
                    <Border Grid.Column="0" Background="#0B1220" CornerRadius="12" Padding="20">
                        <StackPanel Spacing="12">

                            <TextBlock Text="Create New Bill"
                                       FontSize="20"
                                       FontWeight="SemiBold"
                                       Foreground="#E5E7EB"/>

                            <TextBlock Text="Select customer, add products and quantities."
                                       FontSize="12"
                                       Foreground="Gray"/>

                            <!-- Customer selection -->
                            <StackPanel Orientation="Horizontal" Spacing="12" Margin="0,6,0,0">
                                <ComboBox Header="Select Customer"
                                          x:Name="CustomerComboBox"
                                          Width="320"/>
                            </StackPanel>

                            <!-- Product + qty + add button -->
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <ComboBox Header="Select Product" x:Name="ProductComboBox" Width="320"/>
                                <TextBox Header="Quantity" x:Name="QuantityTextBox" Width="120"/>

                                <!-- Add Item Button -->
                                <Button Content="Add"
                                        Click="AddItem_Click"
                                        Grid.Column="2"
                                        VerticalAlignment="Bottom"
                                        Background="green"
                                        Foreground="White"
                                        BorderBrush="green"
                                        Margin="0,4,0,0"
                                        Width="80"
                                        VerticalContentAlignment="Center"/>
                            </StackPanel>

                            <!-- Table header -->
                            <Grid Margin="0,12,0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="100"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Product" Grid.Column="0" FontWeight="SemiBold" Foreground="#D1D5DB"/>
                                <TextBlock Text="Price"   Grid.Column="1" FontWeight="SemiBold" Foreground="#D1D5DB"/>
                                <TextBlock Text="Qty"     Grid.Column="2" FontWeight="SemiBold" Foreground="#D1D5DB" HorizontalAlignment="Center"/>
                                <TextBlock Text="Total"   Grid.Column="3" FontWeight="SemiBold" Foreground="#D1D5DB"/>
                                <TextBlock Text=""        Grid.Column="4"/>
                            </Grid>

                            <!-- Item rows -->
                            <ListView x:Name="BillItemsListView"
                                      Height="240"
                                      ItemsSource="{Binding BillItems}"
                                      ItemContainerStyle="{StaticResource ListViewItemStretchStyle}"
                                      SelectionMode="None">

                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Border Padding="6" Background="Transparent">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="2*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="80"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="100"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Text="{Binding ProductName}"
                                                           Grid.Column="0"
                                                           Foreground="#E5E7EB"
                                                           TextTrimming="CharacterEllipsis"/>

                                                <TextBlock Text="{Binding FormattedPrice}"
                                                           Grid.Column="1"
                                                           Foreground="#E5E7EB"/>

                                                <TextBlock Text="{Binding Quantity}"
                                                           Grid.Column="2"
                                                           HorizontalAlignment="Center"
                                                           Foreground="#E5E7EB"/>

                                                <TextBlock Text="{Binding FormattedTotal}"
                                                           Grid.Column="3"
                                                           Foreground="#E5E7EB"/>

                                                <!-- Remove Button -->
                                                <Button Content="Remove"
                                                        Grid.Column="4"
                                                        Click="RemoveItem_Click"
                                                        Width="80"
                                                        HorizontalAlignment="Center"
                                                        Background="#DC2626"
                                                        Foreground="White"
                                                        BorderBrush="#B91C1C"
                                                        Padding="4,2"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListView.ItemTemplate>

                            </ListView>
                        </StackPanel>
                    </Border>

                    <!-- RIGHT SECTION: Summary -->
                    <Border Grid.Column="1" Background="#0B1220" CornerRadius="12" Padding="20">
                        <StackPanel Spacing="12">
                            <TextBlock Text="Bill Summary"
                                       FontSize="20"
                                       FontWeight="SemiBold"
                                       Foreground="#E5E7EB"/>

                            <TextBlock x:Name="TotalItemsTextBlock" Foreground="#D1D5DB"/>
                            <TextBlock x:Name="SubtotalTextBlock" Foreground="#D1D5DB"/>
                            <TextBlock x:Name="TotalTextBlock"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="#E5E7EB"/>

                            <Button Content="Generate Bill"
                                    Click="GenerateBill_Click"
                                    Background="#3B82F6"
                                    Foreground="White"
                                    BorderBrush="Transparent"
                                    Padding="10,8"
                                    CornerRadius="6"/>
                        </StackPanel>
                    </Border>
                </Grid>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
