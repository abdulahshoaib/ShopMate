<Page
    x:Class="ShopMate.GUI.GenerateBillPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="40">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left: Customer & Products -->
        <StackPanel Grid.Column="0" Spacing="15">
            <TextBlock Text="Generate Bill" FontSize="28" FontWeight="SemiBold"/>
            <ComboBox Header="Select Customer" x:Name="CustomerComboBox"/>

            <StackPanel Orientation="Horizontal" Spacing="10">
                <ComboBox Header="Select Product" x:Name="ProductComboBox" Width="250"/>
                <TextBox Header="Quantity" x:Name="QuantityTextBox" Width="100"/>
                <Button Content="Add to Bill" Click="AddItem_Click"/>
            </StackPanel>

            <!-- Header row for columns -->
            <Grid Margin="0,8,0,4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="90"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Product" Grid.Column="0" FontWeight="SemiBold"/>
                <TextBlock Text="Price" Grid.Column="1" FontWeight="SemiBold"/>
                <TextBlock Text="Qty" Grid.Column="2" FontWeight="SemiBold"/>
                <TextBlock Text="Total" Grid.Column="3" FontWeight="SemiBold"/>
                <TextBlock Text="" Grid.Column="4"/>
            </Grid>

            <ListView x:Name="BillItemsListView" Height="300" ItemsSource="{Binding BillItems}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="90"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="{Binding ProductName}" Grid.Column="0" TextTrimming="CharacterEllipsis"/>
                            <!-- bind to preformatted string properties -->
                            <TextBlock Text="{Binding FormattedPrice}" Grid.Column="1"/>
                            <TextBlock Text="{Binding Quantity}" Grid.Column="2" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding FormattedTotal}" Grid.Column="3"/>
                            <Button Content="Remove" Grid.Column="4" Click="RemoveItem_Click" HorizontalAlignment="Center"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>

        <!-- Right: Bill Summary -->
        <StackPanel Grid.Column="1" Spacing="15">
            <TextBlock Text="Bill Summary" FontSize="24" FontWeight="SemiBold"/>
            <TextBlock x:Name="TotalItemsTextBlock"/>
            <TextBlock x:Name="SubtotalTextBlock"/>
            <TextBlock x:Name="TotalTextBlock" FontSize="20" FontWeight="Bold"/>
            <Button Content="Generate Bill" Click="GenerateBill_Click"/>
        </StackPanel>
    </Grid>
</Page>
