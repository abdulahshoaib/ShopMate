<Page
    x:Class="ShopMate.GUI.ManageCustomersPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <!-- Collapse Sidebar -->
        <Storyboard x:Name="CollapseSidebarStoryboard">
            <DoubleAnimation
                Storyboard.TargetName="SidebarColumn"
                Storyboard.TargetProperty="Width.Value"
                To="60"
                Duration="0:0:0.25"/>
        </Storyboard>

        <!-- Expand Sidebar -->
        <Storyboard x:Name="ExpandSidebarStoryboard">
            <DoubleAnimation
                Storyboard.TargetName="SidebarColumn"
                Storyboard.TargetProperty="Width.Value"
                To="220"
                Duration="0:0:0.25"/>
        </Storyboard>
    </Page.Resources>


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="SidebarColumn" Width="170"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ▬▬▬▬▬▬▬ SIDE BAR ▬▬▬▬▬▬▬ -->
        <Grid Grid.Column="0" Background="#111827">

            <StackPanel Padding="10" Spacing="15">

                <!-- Title + Toggle -->
                <Grid Margin="0,10,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="40"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Admin Panel"
                               Foreground="#E5E7EB"
                               FontSize="12"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>

                    <Button Content="≡"
                            Grid.Column="1"
                            Width="36" Height="36"
                            Background="Transparent"
                            Foreground="#E5E7EB"
                            BorderBrush="Transparent"
                            FontSize="20"/>
                </Grid>

                <!-- Sidebar Buttons -->
                <StackPanel Spacing="10">
                    <StackPanel.Resources>
                        <Style TargetType="Button">
                            <Setter Property="Width" Value="150"/>
                            <Setter Property="Height" Value="38"/>
                            <Setter Property="FontSize" Value="14"/>
                            <Setter Property="Foreground" Value="#F3F4F6"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="Padding" Value="12,5"/>
                        </Style>
                    </StackPanel.Resources>

                    <Button Content="Dashboard" Click="OnDashboardClicked"/>
                    <Button Content="Generate Report" Click="OnGenerateReportClicked"/>
                    <Button Content="Manage Staff" Click="OnManageEmployeesClicked"/>
                    <Button Content="Manage Customers" Background="#374151"/>
                    <Button Content="Manage Products" Click="OnManageProductsClicked"/>

                    <StackPanel Grid.Row="2"
                                Spacing="10"
                                Margin="0,0,0,20">
                        <Rectangle Height="1"
                                   Fill="#1F2937"
                                   Margin="0,0,0,10"/>
                        
                        <Button Content="Settings" Click="OnSettingsClicked"/>

                        <Button Content="Sign Out"
                                Click="OnSignOutClicked"
                                Foreground="#EF4444"/>
                        
                    </StackPanel>

                </StackPanel>
            </StackPanel>
        </Grid>


        <!-- ▬▬▬▬▬▬▬ MAIN CONTENT ▬▬▬▬▬▬▬ -->
        <ScrollViewer Grid.Column="1">
            <StackPanel Padding="40" Spacing="20">

                <TextBlock Text="Manage Customers"
                           FontSize="32"
                           FontWeight="SemiBold"/>

                <TextBlock Text="Add, delete or view customer records."
                           FontSize="12"
                           Foreground="Gray"/>

                <!-- 2 Cards in Row 1, 1 Centered Below -->
                <Grid ColumnSpacing="20" RowSpacing="20" Margin="0,20,0,0">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- ADD CUSTOMER -->
                    <Border Grid.Column="0" Grid.Row="0"
                            Background="#3B82F6"
                            CornerRadius="18" Padding="20">
                        <StackPanel>
                            <TextBlock Text="Add Customer"
                                       FontWeight="Bold" Foreground="White" FontSize="20"/>
                            <TextBlock Text="Add a new customer to your system."
                                       Foreground="White" FontSize="13" Margin="0,4,0,10"/>
                            <Button Content="Get Started"
                                    Background="#20FFFFFF"
                                    Foreground="White"
                                    BorderBrush="Transparent"
                                    CornerRadius="6"
                                    Padding="8,4"
                                    Click="OnAddCustomerClicked"/>
                        </StackPanel>
                    </Border>

                    <!-- DELETE CUSTOMER -->
                    <Border Grid.Column="1" Grid.Row="0"
                            Background="#EF4444"
                            CornerRadius="18" Padding="20">
                        <StackPanel>
                            <TextBlock Text="Delete Customer"
                                       FontWeight="Bold" Foreground="White" FontSize="20"/>
                            <TextBlock Text="Remove a customer record."
                                       Foreground="White" FontSize="13" Margin="0,4,0,10"/>
                            <Button Content="Get Started"
                                    Background="#20FFFFFF"
                                    Foreground="White"
                                    BorderBrush="Transparent"
                                    CornerRadius="6"
                                    Padding="8,4"
                                    Click="OnDeleteCustomerClicked"/>
                        </StackPanel>
                    </Border>

                    <!-- VIEW CUSTOMERS (Centered Row 2) -->
                    <Border Grid.ColumnSpan="2" Grid.Row="1"
                            HorizontalAlignment="Center"
                            Width="360"
                            Background="#10B981"
                            CornerRadius="18" Padding="20">
                        <StackPanel>
                            <TextBlock Text="View Customers"
                                       FontWeight="Bold" Foreground="White" FontSize="20"/>
                            <TextBlock Text="Browse and search all customers."
                                       Foreground="White" FontSize="13" Margin="0,4,0,10"/>
                            <Button Content="Get Started"
                                    Background="#20FFFFFF"
                                    Foreground="White"
                                    BorderBrush="Transparent"
                                    CornerRadius="6"
                                    Padding="8,4"
                                    Click="OnViewCustomersClicked"/>
                        </StackPanel>
                    </Border>

                </Grid>

            </StackPanel>
        </ScrollViewer>

    </Grid>
</Page>
