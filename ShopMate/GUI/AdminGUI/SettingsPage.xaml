<Page
    x:Class="ShopMate.GUI.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:ShopMate.GUI.Controls"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>

        <!-- LABEL -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,6,0,3"/>
        </Style>

        <!-- CARD -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Background" Value="#1A1C1E"/>
            <Setter Property="BorderBrush" Value="#2A2D31"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
        </Style>

    </Page.Resources>


    <!-- MAIN GRID -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="170"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR (Admin or Sales) -->
        <controls:AdminSidebarControl Grid.Column="0"/>

        <!-- CONTENT -->
        <ScrollViewer Grid.Column="1">
            <StackPanel Padding="40" Spacing="20">

                <!-- HEADER -->
                <Grid ColumnSpacing="12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- BACK BUTTON -->
                    <Button Width="32"
                            Height="32"
                            Background="#1F2123"
                            BorderBrush="#3A3D40"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="0">
                        <Image Source="ms-appx:///Assets/Icons/back.png"
                               Width="20" Height="20"/>
                    </Button>

                    <TextBlock Grid.Column="1"
                               Text="Settings"
                               FontSize="28"
                               FontWeight="SemiBold"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                </Grid>

                <TextBlock Text="Manage your application preferences and account settings."
                           FontSize="13"
                           Foreground="#9CA3AF"/>


                <!-- ACCOUNT SETTINGS -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>

                        <TextBlock Text="Account"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   Margin="0,0,0,10"/>

                        <TextBlock Text="Display Name" Style="{StaticResource LabelStyle}"/>
                        <TextBox/>

                        <TextBlock Text="Email" Style="{StaticResource LabelStyle}"/>
                        <TextBox/>

                        <TextBlock Text="Change Password" Style="{StaticResource LabelStyle}"/>
                        <PasswordBox/>
                    </StackPanel>
                </Border>   

            </StackPanel>
        </ScrollViewer>

    </Grid>
</Page>