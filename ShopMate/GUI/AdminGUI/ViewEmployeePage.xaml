<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="ShopMate.GUI.AdminGUI.ViewEmployeePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ShopMate.GUI.AdminGUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:controls="using:ShopMate.GUI.Controls"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>

        <!-- SIDEBAR ANIMATIONS -->
        <Storyboard x:Name="CollapseSidebarStoryboard">
            <DoubleAnimation Storyboard.TargetName="SidebarColumn"
                             Storyboard.TargetProperty="Width.Value"
                             To="60" Duration="0:0:0.25"/>
        </Storyboard>

        <Storyboard x:Name="ExpandSidebarStoryboard">
            <DoubleAnimation Storyboard.TargetName="SidebarColumn"
                             Storyboard.TargetProperty="Width.Value"
                             To="220" Duration="0:0:0.25"/>
        </Storyboard>

        <!-- CARD STYLE -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="18"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,20,0,0"/>
        </Style>

        <!-- SEARCH BOX -->
        <Style x:Key="SearchBoxStyle" TargetType="TextBox">
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="CornerRadius" Value="8"/>
        </Style>

    </Page.Resources>


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="SidebarColumn" Width="170"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT SIDEBAR -->
        <controls:AdminSidebarControl Grid.Column="0"/>

        <!-- PAGE CONTENT -->
        <ScrollViewer Grid.Column="1">
            <StackPanel Padding="40" Spacing="20">

                <!-- TITLE -->
                <TextBlock Text="View Employees"
                           FontSize="32"
                           FontWeight="SemiBold"/>

                <TextBlock Text="Browse all sales employees."
                           FontSize="12"
                           Foreground="Gray"/>

                <!-- SEARCH -->
                <TextBox x:Name="SearchBox"
                         PlaceholderText="Search by name, phone, or username..."
                         Style="{StaticResource SearchBoxStyle}"
                         TextChanged="SearchBox_TextChanged"/>

                <!-- EMPLOYEE TABLE -->
                <Border Background="#1F2937" Style="{StaticResource CardStyle}">
                    <StackPanel>

                        <!-- TABLE HEADERS -->
                        <Grid ColumnDefinitions="2*,2*,2*,2*"
                              Padding="5"
                              Margin="0,0,0,10">

                            <TextBlock Text="Name" Grid.Column="0" Foreground="White" FontWeight="Bold"/>
                            <TextBlock Text="Phone" Grid.Column="1" Foreground="White" FontWeight="Bold"/>
                            <TextBlock Text="Address" Grid.Column="2" Foreground="White" FontWeight="Bold"/>
                            <TextBlock Text="Username" Grid.Column="3" Foreground="White" FontWeight="Bold"/>

                        </Grid>

                        <!-- EMPLOYEE LIST -->
                        <ListView x:Name="EmployeeListView"
                                  SelectionMode="None">

                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid ColumnDefinitions="2*,2*,2*,2*"
                                          Padding="5"
                                          Margin="0,4">

                                        <TextBlock Text="{Binding Name}" Grid.Column="0" Foreground="White"/>
                                        <TextBlock Text="{Binding Phone}" Grid.Column="1" Foreground="White"/>
                                        <TextBlock Text="{Binding Address}" Grid.Column="2" Foreground="White"/>
                                        <TextBlock Text="{Binding Username}" Grid.Column="3" Foreground="White"/>

                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>

                        </ListView>

                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
