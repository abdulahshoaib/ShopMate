<Page
    x:Class="ShopMate.GUI.AdminGUI.ReportPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:ShopMate.GUI.Controls"
    Background="#111827">

    <Page.Resources>

        <!-- LABEL -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,6,0,3"/>
        </Style>

        <!-- CARD STYLE -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Background" Value="#1A1C1E"/>
            <Setter Property="BorderBrush" Value="#2A2D31"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
        </Style>

        <!-- TABLE TEXT -->
        <Style x:Key="TableCell" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#D1D5DB"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

    </Page.Resources>


    <!-- MAIN LAYOUT -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="170"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR -->
        <controls:SalesSidebarControl Grid.Column="0"/>

        <!-- MAIN CONTENT -->
        <ScrollViewer Grid.Column="1">
            <StackPanel Padding="40" Spacing="20">

                <!-- HEADER WITH BACK BUTTON -->
                <Grid ColumnSpacing="12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Width="32"
                            Height="32"
                            Background="#1F2123"
                            BorderBrush="#3A3D40"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="0"
                            Click="OnBackClicked">
                        <Image Source="ms-appx:///Assets/Icons/back.png"
                               Width="20" Height="20"/>
                    </Button>

                    <TextBlock Grid.Column="1"
                               Text="Sales Report"
                               FontSize="28"
                               FontWeight="SemiBold"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                </Grid>

                <TextBlock Text="View today's sales performance, revenue, and bill details."
                           FontSize="13"
                           Foreground="#9CA3AF"/>


                <!-- SUMMARY ROW 1 -->
                <Grid ColumnSpacing="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- TOTAL SALES -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="Total Sales (PKR)"
                                       Foreground="#9CA3AF"
                                       FontSize="16"/>
                            <TextBlock Text="125,430"
                                       Foreground="White"
                                       FontSize="28"
                                       FontWeight="Bold"/>
                        </StackPanel>
                    </Border>

                    <!-- TOTAL BILLS -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="Total Bills"
                                       Foreground="#9CA3AF"
                                       FontSize="16"/>
                            <TextBlock Text="48"
                                       Foreground="White"
                                       FontSize="28"
                                       FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                </Grid>


                <!-- SUMMARY ROW 2 -->
                <Grid ColumnSpacing="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- HIGHEST SALE -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="Highest Sale"
                                       Foreground="#9CA3AF"
                                       FontSize="16"/>
                            <TextBlock Text="8,500"
                                       Foreground="White"
                                       FontSize="28"
                                       FontWeight="Bold"/>
                        </StackPanel>
                    </Border>

                    <!-- AVERAGE SALE -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="Average Sale"
                                       Foreground="#9CA3AF"
                                       FontSize="16"/>
                            <TextBlock Text="2,610"
                                       Foreground="White"
                                       FontSize="28"
                                       FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                </Grid>


                <!-- TABLE CARD -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>

                        <TextBlock Text="Today's Bills"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   Margin="0,0,0,12"/>

                        <!-- GRID TABLE -->
                        <Grid ColumnSpacing="10" RowSpacing="8">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="120"/>
                            </Grid.ColumnDefinitions>

                            <!-- HEADER -->
                            <TextBlock Text="Bill ID"  Grid.Column="0" Style="{StaticResource TableCell}" FontWeight="SemiBold"/>
                            <TextBlock Text="Customer" Grid.Column="1" Style="{StaticResource TableCell}" FontWeight="SemiBold"/>
                            <TextBlock Text="Amount"   Grid.Column="2" Style="{StaticResource TableCell}" FontWeight="SemiBold"/>
                            <TextBlock Text="Time"     Grid.Column="3" Style="{StaticResource TableCell}" FontWeight="SemiBold"/>

                            <!-- ROW 1 -->
                            <TextBlock Text="#1201" Grid.Row="1" Grid.Column="0" Style="{StaticResource TableCell}"/>
                            <TextBlock Text="Ahmed Khan" Grid.Row="1" Grid.Column="1" Style="{StaticResource TableCell}"/>
                            <TextBlock Text="3,200" Grid.Row="1" Grid.Column="2" Style="{StaticResource TableCell}"/>
                            <TextBlock Text="10:33 AM" Grid.Row="1" Grid.Column="3" Style="{StaticResource TableCell}"/>

                            <!-- ROW 2 -->
                            <TextBlock Text="#1202" Grid.Row="2" Grid.Column="0" Style="{StaticResource TableCell}"/>
                            <TextBlock Text="Fatima Noor" Grid.Row="2" Grid.Column="1" Style="{StaticResource TableCell}"/>
                            <TextBlock Text="8,500" Grid.Row="2" Grid.Column="2" Style="{StaticResource TableCell}"/>
                            <TextBlock Text="11:15 AM" Grid.Row="2" Grid.Column="3" Style="{StaticResource TableCell}"/>

                            <!-- ROW 3 -->
                            <TextBlock Text="#1203" Grid.Row="3" Grid.Column="0" Style="{StaticResource TableCell}"/>
                            <TextBlock Text="Talha Saeed" Grid.Row="3" Grid.Column="1" Style="{StaticResource TableCell}"/>
                            <TextBlock Text="1,750" Grid.Row="3" Grid.Column="2" Style="{StaticResource TableCell}"/>
                            <TextBlock Text="12:40 PM" Grid.Row="3" Grid.Column="3" Style="{StaticResource TableCell}"/>

                        </Grid>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

    </Grid>
</Page>
