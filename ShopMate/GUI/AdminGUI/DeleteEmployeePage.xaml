<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="ShopMate.GUI.AdminGUI.DeleteEmployeePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ShopMate.GUI.AdminGUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:controls="using:ShopMate.GUI.Controls"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>

        <!-- SIDEBAR ANIMATION -->
        <Storyboard x:Name="CollapseSidebarStoryboard">
            <DoubleAnimation Storyboard.TargetName="SidebarColumn"
                             Storyboard.TargetProperty="Width.Value"
                             To="60" Duration="0:0:0.25"/>
        </Storyboard>

        <Storyboard x:Name="ExpandSidebarStoryboard">
            <DoubleAnimation Storyboard.TargetName="SidebarColumn"
                             Storyboard.TargetProperty="Width.Value"
                             To="220" Duration="0:0:0.25"/>
        </Storyboard>

        <!-- LABEL -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,5,0,3"/>
        </Style>

        <!-- READONLY TEXTBOX -->
        <Style x:Key="InputStyle" TargetType="TextBox">
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>

        <!-- CARD -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="18"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,20,0,0"/>
        </Style>

    </Page.Resources>


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="SidebarColumn" Width="170"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR -->
        <controls:AdminSidebarControl Grid.Column="0"/>

        <!-- PAGE CONTENT -->
        <ScrollViewer Grid.Column="1">
            <StackPanel Padding="40" Spacing="20">

                <TextBlock Text="Delete Employee"
                           FontSize="32"
                           FontWeight="SemiBold"/>

                <TextBlock Text="Select an employee to view their details and delete them."
                           FontSize="12"
                           Foreground="Gray"/>

                <!-- EMPLOYEE SELECTOR -->
                <StackPanel Margin="0,10,0,0">
                    <TextBlock Text="Choose Employee"
                               FontSize="16"
                               FontWeight="SemiBold"/>
                    <ComboBox x:Name="EmployeeComboBox"
                              PlaceholderText="Select employee..."
                              SelectionChanged="EmployeeComboBox_SelectionChanged"
                              Padding="8"
                              FontSize="14"/>
                </StackPanel>


                <!-- EMPLOYEE INFO CARD -->
                <Border Background="#F59E0B" Style="{StaticResource CardStyle}">
                    <StackPanel>

                        <TextBlock Text="Employee Information"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="White"/>

                        <TextBlock Text="Full Name" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="NameTextBox" Style="{StaticResource InputStyle}"/>

                        <TextBlock Text="Phone Number" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="PhoneTextBox" Style="{StaticResource InputStyle}"/>

                        <TextBlock Text="Address" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="AddressTextBox"
                                 Style="{StaticResource InputStyle}"
                                 Height="70"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"/>

                    </StackPanel>
                </Border>

                <!-- DELETE BUTTON -->
                <Button Content="Delete Employee"
                        Width="220"
                        Height="50"
                        Background="#DC2626"
                        Foreground="White"
                        BorderBrush="Transparent"
                        CornerRadius="10"
                        FontSize="18"
                        HorizontalAlignment="Center"
                        Click="OnDeleteEmployeeClicked"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
