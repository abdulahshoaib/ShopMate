<Page
    x:Class="ShopMate.GUI.SalesPersonGUI.SalesViewInventory"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ShopMate.GUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:ShopMate.GUI.Controls"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">


    <Page.Resources>
        <local:ExpiryDateConverter x:Key="ExpiryDateConverter"/>

        <!-- SIDEBAR ANIMATIONS -->
        <Storyboard x:Name="CollapseSidebarStoryboard">
            <DoubleAnimation
                Storyboard.TargetName="SidebarColumn"
                Storyboard.TargetProperty="Width.Value"
                To="60"
                Duration="0:0:0.25" />
        </Storyboard>

        <Storyboard x:Name="ExpandSidebarStoryboard">
            <DoubleAnimation
                Storyboard.TargetName="SidebarColumn"
                Storyboard.TargetProperty="Width.Value"
                To="220"
                Duration="0:0:0.25" />
        </Storyboard>

        <!-- INPUT LABEL -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,5,0,3"/>
        </Style>

        <!-- CARD PANEL -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="18"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>

        <!-- PRODUCT ITEM CARD -->
        <DataTemplate x:Key="ProductTemplate">
            <Border Background="#3B82F6" Padding="15" CornerRadius="12" Margin="0,0,0,12">
                <StackPanel Spacing="4">
                    
                    <!-- Name -->
                    <TextBlock Text="{Binding Name}"
                       FontSize="20"
                       FontWeight="SemiBold"
                       Foreground="White"/>

                    <!-- Description -->
                    <TextBlock Text="{Binding Description}"
                       FontSize="14"
                       Foreground="White"
                       TextWrapping="Wrap"/>

                    <StackPanel Orientation="Horizontal" Spacing="20" Margin="0,8,0,0">
                        <TextBlock Text="Qty:" Foreground="White" FontSize="14"/>
                        <TextBlock Text="{Binding Stock}" Foreground="White" FontSize="14"/>

                        <TextBlock Text="Price:" Foreground="White" FontSize="14"/>
                        <TextBlock Text="{Binding Price}" Foreground="White" FontSize="14"/>
                    </StackPanel>

                    <TextBlock Text="{Binding ExpiryDate, Converter={StaticResource ExpiryDateConverter}}"
                               Foreground="White"
                               FontSize="12"
                               Opacity="0.8"/>

                </StackPanel>
                </Border>
            </DataTemplate>


    </Page.Resources>


    <!-- MAIN GRID -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="SidebarColumn" Width="170"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR -->
        <controls:AdminSidebarControl Grid.Column="0"/>

        <!-- PAGE CONTENT -->
        <ScrollViewer Grid.Column="1">
            <StackPanel Padding="40" Spacing="20">

                <!-- PAGE TITLE -->
                <TextBlock Text="View Products"
                           FontSize="32"
                           FontWeight="SemiBold"/>

                <TextBlock Text="List of all products in inventory."
                           FontSize="12"
                           Foreground="Gray"/>

                <!-- TABLE HEADER -->
                <Grid ColumnSpacing="10" Margin="0,20,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Product Name" FontWeight="Bold" />
                    <TextBlock Text="Stock" Grid.Column="1" FontWeight="Bold"/>
                    <TextBlock Text="Price" Grid.Column="2" FontWeight="Bold"/>
                    <TextBlock Text="Expiry" Grid.Column="3" FontWeight="Bold"/>
                    <TextBlock Text="Description" Grid.Column="4" FontWeight="Bold"/>
                </Grid>

                <!-- TABLE ROWS -->
                <ItemsRepeater x:Name="ProductsRepeater">
                    <ItemsRepeater.Layout>
                        <StackLayout Orientation="Vertical" Spacing="4"/>
                    </ItemsRepeater.Layout>

                    <ItemsRepeater.ItemTemplate>
                        <DataTemplate>
                            <Grid ColumnSpacing="10" Padding="8" CornerRadius="6">

                                <!-- STRIPED ROW BACKGROUND -->
                                <Grid.Background>
                                    <SolidColorBrush Color="{Binding RowColor}"/>
                                </Grid.Background>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="3*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="{Binding Name}" />

                                <TextBlock Text="{Binding Stock}" Grid.Column="1"/>

                                <TextBlock Text="{Binding Price}" Grid.Column="2"/>

                                <TextBlock Text="{Binding ExpiryDate, Converter={StaticResource ExpiryDateConverter}}" 
                           Grid.Column="3"/>

                                <TextBlock Text="{Binding Description}" 
                           Grid.Column="4"
                           TextWrapping="Wrap" />
                            </Grid>
                        </DataTemplate>
                    </ItemsRepeater.ItemTemplate>
                </ItemsRepeater>


            </StackPanel>
        </ScrollViewer>
    </Grid>


</Page>
