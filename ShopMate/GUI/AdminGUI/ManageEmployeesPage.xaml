<Page
    x:Class="ShopMate.GUI.ManageEmployeesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:ShopMate.GUI.Controls"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <!-- Collapse Sidebar -->
        <Storyboard x:Name="CollapseSidebarStoryboard">
            <DoubleAnimation
                Storyboard.TargetName="SidebarColumn"
                Storyboard.TargetProperty="Width.Value"
                To="60"
                Duration="0:0:0.25"/>
        </Storyboard>

        <!-- Expand Sidebar -->
        <Storyboard x:Name="ExpandSidebarStoryboard">
            <DoubleAnimation
                Storyboard.TargetName="SidebarColumn"
                Storyboard.TargetProperty="Width.Value"
                To="220"
                Duration="0:0:0.25"/>
        </Storyboard>
    </Page.Resources>


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="SidebarColumn" Width="170"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <controls:AdminSidebarControl Grid.Column="0"/>



        <!-- ▬▬▬▬▬▬▬ MAIN CONTENT ▬▬▬▬▬▬▬ -->
        <ScrollViewer Grid.Column="1">
            <StackPanel Padding="40" Spacing="20">

                <TextBlock Text="Manage Employees"
                           FontSize="32"
                           FontWeight="SemiBold"/>

                <TextBlock Text="Add, delete or view employee records."
                           FontSize="12"
                           Foreground="Gray"/>

                <!-- 2 Cards in Row 1, 1 Centered Below -->
                <Grid ColumnSpacing="20" RowSpacing="20" Margin="0,20,0,0">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- ADD CUSTOMER -->
                    <Border Grid.Column="0" Grid.Row="0"
                            Background="#3B82F6"
                            CornerRadius="18" Padding="20">
                        <StackPanel>
                            <TextBlock Text="Add Employee"
                                       FontWeight="Bold" Foreground="White" FontSize="20"/>
                            <TextBlock Text="Add a new Employee to your system."
                                       Foreground="White" FontSize="13" Margin="0,4,0,10"/>
                            <Button Content="Get Started"
                                    Background="#20FFFFFF"
                                    Foreground="White"
                                    BorderBrush="Transparent"
                                    CornerRadius="6"
                                    Padding="8,4"
                                    Click="OnAddEmployeeClicked"/>
                        </StackPanel>
                    </Border>

                    <!-- DELETE CUSTOMER -->
                    <Border Grid.Column="1" Grid.Row="0"
                            Background="#EF4444"
                            CornerRadius="18" Padding="20">
                        <StackPanel>
                            <TextBlock Text="Delete Employee"
                                       FontWeight="Bold" Foreground="White" FontSize="20"/>
                            <TextBlock Text="Remove a Employee record."
                                       Foreground="White" FontSize="13" Margin="0,4,0,10"/>
                            <Button Content="Get Started"
                                    Background="#20FFFFFF"
                                    Foreground="White"
                                    BorderBrush="Transparent"
                                    CornerRadius="6"
                                    Padding="8,4"
                                    Click="OnDeleteEmployeeClicked"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="0" Grid.Row="1"
                            Background="#10B981"
                            CornerRadius="18" Padding="20">
                        <StackPanel>
                            <TextBlock Text="View Employees"
                                       FontWeight="Bold" Foreground="White" FontSize="20"/>
                            <TextBlock Text="Browse and search all Employees."
                                       Foreground="White" FontSize="13" Margin="0,4,0,10"/>
                            <Button Content="Get Started"
                                    Background="#20FFFFFF"
                                    Foreground="White"
                                    BorderBrush="Transparent"
                                    CornerRadius="6"
                                    Padding="8,4"
                                    Click="OnViewEmployeesClicked"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="1" Grid.Row="1"
                            Background="#F59E0B"
                            CornerRadius="18" Padding="20">
                        <StackPanel>
                            <TextBlock Text="Edit Employee"
                                       FontWeight="Bold" Foreground="White" FontSize="20"/>
                            <TextBlock Text="Edit any information of any Employee."
                                       Foreground="White" FontSize="13" Margin="0,4,0,10"/>
                            <Button Content="Get Started"
                                    Background="#20FFFFFF"
                                    Foreground="White"
                                    BorderBrush="Transparent"
                                    CornerRadius="6"
                                    Padding="8,4"
                                    Click="OnEditEmployeeClicked"/>
                        </StackPanel>

                    </Border>

                </Grid>

            </StackPanel>
        </ScrollViewer>

    </Grid>
</Page>
