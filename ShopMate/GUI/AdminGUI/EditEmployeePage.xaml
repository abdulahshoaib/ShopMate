<Page
    x:Class="ShopMate.GUI.AdminGUI.EditEmployeePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:ShopMate.GUI.Controls"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>

        <!-- SIDEBAR ANIMATIONS -->
        <Storyboard x:Name="CollapseSidebarStoryboard">
            <DoubleAnimation Storyboard.TargetName="SidebarColumn"
                             Storyboard.TargetProperty="Width.Value"
                             To="60" Duration="0:0:0.25"/>
        </Storyboard>

        <Storyboard x:Name="ExpandSidebarStoryboard">
            <DoubleAnimation Storyboard.TargetName="SidebarColumn"
                             Storyboard.TargetProperty="Width.Value"
                             To="220" Duration="0:0:0.25"/>
        </Storyboard>

        <!-- LABEL STYLE -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,5,0,3"/>
        </Style>

        <!-- TEXTBOX STYLE -->
        <Style x:Key="InputStyle" TargetType="TextBox">
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="CornerRadius" Value="6"/>
        </Style>

        <!-- PASSWORD BOX STYLE -->
        <Style x:Key="PasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="CornerRadius" Value="6"/>
        </Style>

        <!-- CARD PANEL -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="18"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>

    </Page.Resources>


    <!-- LAYOUT -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="SidebarColumn" Width="170"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR -->
        <controls:AdminSidebarControl Grid.Column="0"/>

        <!-- MAIN CONTENT -->
        <ScrollViewer Grid.Column="1">
            <StackPanel Padding="40" Spacing="20">

                <!-- PAGE TITLE -->
                <TextBlock Text="Edit Employee"
                           FontSize="32"
                           FontWeight="SemiBold"/>

                <TextBlock Text="Select an employee and update their details - login credentials."
                           FontSize="12" Foreground="Gray"/>

                <!-- EMPLOYEE SELECTOR -->
                <StackPanel Margin="0,10,0,0">
                    <TextBlock Text="Choose Employee"
                               FontSize="16"
                               FontWeight="SemiBold"/>
                    <ComboBox x:Name="EmployeeComboBox"
                              PlaceholderText="Select employee..."
                              SelectionChanged="EmployeeComboBox_SelectionChanged"
                              Padding="8"
                              FontSize="14"/>
                </StackPanel>


                <!-- EMPLOYEE AND USER INFO GRID -->
                <Grid ColumnSpacing="20" Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- EMPLOYEE INFO -->
                    <Border Background="#F59E0B"
                            Grid.Column="0"
                            Style="{StaticResource CardStyle}">
                        <StackPanel>

                            <TextBlock Text="Employee Information"
                                       Foreground="White"
                                       FontSize="20"
                                       FontWeight="Bold"/>

                            <TextBlock Text="Full Name" Style="{StaticResource LabelStyle}"/>
                            <TextBox x:Name="NameTextBox" Style="{StaticResource InputStyle}"/>

                            <TextBlock Text="Phone Number" Style="{StaticResource LabelStyle}"/>
                            <TextBox x:Name="PhoneTextBox" Style="{StaticResource InputStyle}"/>

                            <TextBlock Text="Address" Style="{StaticResource LabelStyle}"/>
                            <TextBox x:Name="AddressTextBox"
                                     Style="{StaticResource InputStyle}"
                                     Height="70"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"/>

                        </StackPanel>
                    </Border>


                    <!-- USER ACCOUNT INFO -->
                    <Border Background="#10B981"
                            Grid.Column="1"
                            Style="{StaticResource CardStyle}">
                        <StackPanel>

                            <TextBlock Text="Account Login Information"
                                       Foreground="White"
                                       FontSize="20"
                                       FontWeight="Bold"/>

                            <TextBlock Text="Username" Style="{StaticResource LabelStyle}"/>
                            <TextBox x:Name="UsernameTextBox" Style="{StaticResource InputStyle}"/>

                            <TextBlock Text="Password (enter new to change)" Style="{StaticResource LabelStyle}"/>
                            <PasswordBox x:Name="PasswordBox" Style="{StaticResource PasswordBoxStyle}"/>

                        </StackPanel>
                    </Border>
                </Grid>

                <!-- SAVE BUTTON -->
                <Button Content="Save Changes"
                        Width="200"
                        Height="50"
                        Background="#3B82F6"
                        Foreground="White"
                        CornerRadius="10"
                        HorizontalAlignment="Center"
                        Click="OnSaveEmployeeClicked"/>
            </StackPanel>
        </ScrollViewer>

    </Grid>
</Page>