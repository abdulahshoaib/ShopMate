<Page
    x:Class="ShopMate.GUI.AdminGUI.DeleteCustomerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ShopMate.GUI.AdminGUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
xmlns:controls="using:ShopMate.GUI.Controls"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>

        <!-- SIDEBAR ANIMATIONS -->
        <Storyboard x:Name="CollapseSidebarStoryboard">
            <DoubleAnimation
                Storyboard.TargetName="SidebarColumn"
                Storyboard.TargetProperty="Width.Value"
                To="60"
                Duration="0:0:0.25" />
        </Storyboard>

        <Storyboard x:Name="ExpandSidebarStoryboard">
            <DoubleAnimation
                Storyboard.TargetName="SidebarColumn"
                Storyboard.TargetProperty="Width.Value"
                To="220"
                Duration="0:0:0.25" />
        </Storyboard>

        <!-- LABEL STYLE -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,5,0,3"/>
        </Style>

        <!-- READONLY TEXTBOX -->
        <Style x:Key="InputStyle" TargetType="TextBox">
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="Background" Value="#F3F4F6"/>
        </Style>

        <!-- READONLY COMBO -->
        <Style x:Key="ComboStyle" TargetType="ComboBox">
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="IsHitTestVisible" Value="False"/>
            <!-- Makes combo readonly -->
        </Style>

        <!-- CARD STYLE -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="18"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>

    </Page.Resources>


    <!-- MAIN GRID -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="SidebarColumn" Width="170"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR -->
        <controls:AdminSidebarControl Grid.Column="0"/>

        <!-- PAGE CONTENT -->
        <ScrollViewer Grid.Column="1">
            <StackPanel Padding="40" Spacing="20">

                <!-- TITLE -->
                <TextBlock Text="Delete Customer"
                           FontSize="32"
                           FontWeight="SemiBold"/>

                <TextBlock Text="Select a customer to view their details and delete them."
                           FontSize="12"
                           Foreground="Gray"/>

                <!-- CUSTOMER SELECTOR -->
                <StackPanel>
                    <TextBlock Text="Choose Customer"
                               FontWeight="SemiBold"
                               FontSize="16"
                               Margin="0,10,0,3"/>

                    <ComboBox x:Name="CustomerComboBox"
                              PlaceholderText="Select a customer..."
                              SelectionChanged="CustomerComboBox_SelectionChanged"
                              Padding="8"
                              FontSize="14"/>
                </StackPanel>

                <Grid ColumnSpacing="20" RowSpacing="20" Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- CUSTOMER INFO -->
                    <Border Grid.Column="0"
                            Background="#F59E0B"
                            Style="{StaticResource CardStyle}">
                        <StackPanel>

                            <TextBlock Text="Customer Information"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       Margin="0,0,0,12"/>

                            <TextBlock Text="Full Name" Style="{StaticResource LabelStyle}"/>
                            <TextBox x:Name="NameTextBox" Style="{StaticResource InputStyle}"/>

                            <TextBlock Text="Gender" Style="{StaticResource LabelStyle}"/>
                            <ComboBox x:Name="GenderComboBox" Style="{StaticResource ComboStyle}">
                                <ComboBoxItem Content="Male"/>
                                <ComboBoxItem Content="Female"/>
                            </ComboBox>

                            <TextBlock Text="Age" Style="{StaticResource LabelStyle}"/>
                            <TextBox x:Name="AgeTextBox" Style="{StaticResource InputStyle}"/>

                        </StackPanel>
                    </Border>


                    <!-- CONTACT INFO -->
                    <Border Grid.Column="1"
                            Background="#10B981"
                            Style="{StaticResource CardStyle}">
                        <StackPanel>

                            <TextBlock Text="Contact Information"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       Margin="0,0,0,12"/>

                            <TextBlock Text="Address" Style="{StaticResource LabelStyle}"/>
                            <TextBox x:Name="AddressTextBox"
                                     Style="{StaticResource InputStyle}"
                                     Height="70"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"/>

                            <TextBlock Text="Phone Number" Style="{StaticResource LabelStyle}"/>
                            <TextBox x:Name="PhoneTextBox" Style="{StaticResource InputStyle}"/>

                        </StackPanel>
                    </Border>

                </Grid>

                <!-- DELETE BUTTON -->
                <Button Content="Delete Customer"
                        Width="220"
                        Height="50"
                        Background="#DC2626"
                        Foreground="White"
                        BorderBrush="Transparent"
                        CornerRadius="10"
                        FontSize="18"
                        HorizontalAlignment="Center"
                        Click="OnDeleteCustomerClicked"/>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
