<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="ShopMate.GUI.AdminGUI.DeleteCustomerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:ShopMate.GUI.Controls"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>

        <!-- LABEL -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,8,0,4"/>
        </Style>

        <!-- READONLY INPUT -->
        <Style x:Key="InputStyle" TargetType="TextBox">
            <Setter Property="BorderBrush" Value="#3A3D40"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="Background" Value="#1F2123"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <!-- READONLY COMBO -->
        <Style x:Key="ComboStyle" TargetType="ComboBox">
            <Setter Property="BorderBrush" Value="#3A3D40"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="IsHitTestVisible" Value="False"/>
            <!-- readonly effect -->
            <Setter Property="Background" Value="#1F2123"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <!-- CARD -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Background" Value="#1A1C1E"/>
            <Setter Property="BorderBrush" Value="#2A2D31"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
        </Style>

    </Page.Resources>


    <!-- MAIN LAYOUT -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="SidebarColumn" Width="170"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR -->
        <controls:AdminSidebarControl Grid.Column="0"/>

        <!-- PAGE CONTENT -->
        <ScrollViewer Grid.Column="1">
            <StackPanel Padding="40" Spacing="20">

                <!-- TITLE + BACK -->
                <Grid ColumnSpacing="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Width="32"
                            Height="32"
                            Background="#1F2123"
                            BorderBrush="#3A3D40"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="0"
                            Click="OnBackClicked">
                        <Image Source="ms-appx:///Assets/Icons/back.png"
                               Width="20" Height="20"/>
                    </Button>

                    <TextBlock Grid.Column="1"
                               Text="Delete Customer"
                               FontSize="28"
                               FontWeight="SemiBold"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                </Grid>

                <TextBlock Text="Select a customer to view their details before deletion."
                           FontSize="13"
                           Foreground="#9CA3AF"/>


                <!-- SELECTOR -->
                <StackPanel>
                    <TextBlock Text="Choose Customer"
                               Style="{StaticResource LabelStyle}"/>

                    <ComboBox x:Name="CustomerComboBox"
                              PlaceholderText="Select a customer..."
                              Padding="8"
                              FontSize="14"
                              BorderBrush="#3A3D40"
                              BorderThickness="1"
                              SelectionChanged="CustomerComboBox_SelectionChanged"/>
                </StackPanel>


                <!-- TWO-COLUMN DETAILS -->
                <Grid ColumnSpacing="20" Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- CUSTOMER INFO -->
                    <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                        <StackPanel>

                            <TextBlock Text="Customer Information"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="White"
                                       Margin="0,0,0,8"/>

                            <TextBlock Text="Full Name" Style="{StaticResource LabelStyle}"/>
                            <TextBox x:Name="NameTextBox"
                                     Style="{StaticResource InputStyle}"/>

                            <TextBlock Text="Gender" Style="{StaticResource LabelStyle}"/>
                            <ComboBox x:Name="GenderComboBox"
                                      Style="{StaticResource ComboStyle}">
                                <ComboBoxItem Content="Male"/>
                                <ComboBoxItem Content="Female"/>
                            </ComboBox>

                            <TextBlock Text="Age" Style="{StaticResource LabelStyle}"/>
                            <TextBox x:Name="AgeTextBox"
                                     Style="{StaticResource InputStyle}"/>
                        </StackPanel>
                    </Border>


                    <!-- CONTACT INFO -->
                    <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                        <StackPanel>

                            <TextBlock Text="Contact Information"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="White"
                                       Margin="0,0,0,8"/>

                            <TextBlock Text="Address" Style="{StaticResource LabelStyle}"/>
                            <TextBox x:Name="AddressTextBox"
                                     Style="{StaticResource InputStyle}"
                                     Height="70"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"/>

                            <TextBlock Text="Phone Number" Style="{StaticResource LabelStyle}"/>
                            <TextBox x:Name="PhoneTextBox"
                                     Style="{StaticResource InputStyle}"/>
                        </StackPanel>
                    </Border>

                </Grid>

                <!-- DELETE BUTTON -->
                <Button Content="Delete Customer"
                        Width="200"
                        Height="48"
                        Background="#DC2626"
                        Foreground="White"
                        BorderBrush="Transparent"
                        CornerRadius="8"
                        FontSize="16"
                        HorizontalAlignment="Center"
                        Click="OnDeleteCustomerClicked"/>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>