<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="ShopMate.GUI.AdminGUI.DeleteProductPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:ShopMate.GUI.Controls"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>

        <!-- LABEL -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,8,0,4"/>
        </Style>

        <!-- READONLY INPUT -->
        <Style x:Key="InputStyle" TargetType="TextBox">
            <Setter Property="BorderBrush" Value="#3A3D40"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="Background" Value="#1F2123"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <!-- CARD -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Background" Value="#1A1C1E"/>
            <Setter Property="BorderBrush" Value="#2A2D31"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

    </Page.Resources>

    <!-- MAIN GRID -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="SidebarColumn" Width="170"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR -->
        <controls:AdminSidebarControl Grid.Column="0"/>

        <!-- MAIN CONTENT -->
        <ScrollViewer Grid.Column="1">
            <StackPanel Padding="40" Spacing="20">

                <!-- PAGE TITLE + BACK BUTTON -->
                <Grid ColumnSpacing="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- BACK BUTTON -->
                    <Button Width="32"
                            Height="32"
                            Background="#1F2123"
                            BorderBrush="#3A3D40"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="0"
                            Click="OnBackClicked">
                        <Image Source="ms-appx:///Assets/Icons/back.png"
                               Width="20" Height="20"/>
                    </Button>

                    <!-- TITLE -->
                    <TextBlock Grid.Column="1"
                               Text="Delete Product"
                               FontSize="28"
                               FontWeight="SemiBold"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                </Grid>

                <TextBlock Text="Select a product to view its details before deletion."
                           FontSize="13"
                           Foreground="#9CA3AF"/>

                <!-- PRODUCT SELECTOR -->
                <StackPanel>
                    <TextBlock Text="Select Product"
                               Style="{StaticResource LabelStyle}"/>

                    <ComboBox x:Name="ProductComboBox"
                              PlaceholderText="Choose a product..."
                              SelectionChanged="ProductComboBox_SelectionChanged"
                              FontSize="14"
                              Padding="8"/>
                </StackPanel>

                <!-- 2-COLUMN DETAILS -->
                <Grid ColumnSpacing="20" RowSpacing="20" Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- PRODUCT INFO -->
                    <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="Product Information"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="White"
                                       Margin="0,0,0,8"/>

                            <TextBlock Text="Product Name" Style="{StaticResource LabelStyle}"/>
                            <TextBox x:Name="ProductNameTextBox" Style="{StaticResource InputStyle}"/>

                            <TextBlock Text="Description" Style="{StaticResource LabelStyle}"/>
                            <TextBox x:Name="DescriptionTextBox"
                                     Style="{StaticResource InputStyle}"
                                     Height="70"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"/>
                        </StackPanel>
                    </Border>

                    <!-- STOCK INFO -->
                    <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="Stock Information"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="White"
                                       Margin="0,0,0,8"/>

                            <TextBlock Text="Quantity" Style="{StaticResource LabelStyle}"/>
                            <TextBox x:Name="QuantityTextBox" Style="{StaticResource InputStyle}"/>

                            <TextBlock Text="Price" Style="{StaticResource LabelStyle}"/>
                            <TextBox x:Name="PriceTextBox" Style="{StaticResource InputStyle}"/>
                        </StackPanel>
                    </Border>

                </Grid>

                <!-- DELETE BUTTON -->
                <Button Content="Delete Product"
                        Width="200"
                        Height="48"
                        Background="#DC2626"
                        Foreground="White"
                        BorderBrush="Transparent"
                        CornerRadius="8"
                        FontSize="16"
                        HorizontalAlignment="Center"
                        Click="OnDeleteProductClicked"/>

            </StackPanel>
        </ScrollViewer>

    </Grid>

</Page>
