<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="ShopMate.GUI.AdminGUI.DeleteProductPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ShopMate.GUI.AdminGUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:ShopMate.GUI.Controls"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">


    <Page.Resources>

        <!-- SIDEBAR ANIMATIONS -->
        <Storyboard x:Name="CollapseSidebarStoryboard">
            <DoubleAnimation
                Storyboard.TargetName="SidebarColumn"
                Storyboard.TargetProperty="Width.Value"
                To="60"
                Duration="0:0:0.25" />
        </Storyboard>

        <Storyboard x:Name="ExpandSidebarStoryboard">
            <DoubleAnimation
                Storyboard.TargetName="SidebarColumn"
                Storyboard.TargetProperty="Width.Value"
                To="220"
                Duration="0:0:0.25" />
        </Storyboard>

        <!-- LABEL STYLE -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,5,0,3"/>
        </Style>

        <!-- READONLY INPUT STYLE -->
        <Style x:Key="InputStyle" TargetType="TextBox">
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>

        <!-- CARD -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="18"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>

    </Page.Resources>

    <!-- MAIN GRID -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="SidebarColumn" Width="170"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR -->
        <controls:AdminSidebarControl Grid.Column="0"/>

        <!-- CONTENT -->
        <ScrollViewer Grid.Column="1">
            <StackPanel Padding="40" Spacing="20">

                <!-- PAGE HEADER -->
                <TextBlock Text="Delete Product"
                           FontSize="32"
                           FontWeight="SemiBold"/>

                <TextBlock Text="Select a product below to view its details and delete it."
                           FontSize="12"
                           Foreground="Gray"/>

                <!-- PRODUCT SELECTOR -->
                <StackPanel>
                    <TextBlock Text="Select Product"
                               FontWeight="SemiBold"
                               FontSize="16"
                               Margin="0,10,0,3"/>

                    <ComboBox x:Name="ProductComboBox"
                              PlaceholderText="Select a product..."
                              SelectionChanged="ProductComboBox_SelectionChanged"
                              Padding="8"
                              FontSize="14"/>
                </StackPanel>

                <Grid ColumnSpacing="20" RowSpacing="20" Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- PRODUCT INFO -->
                    <Border Grid.Column="0"
                            Background="#EF4444"
                            Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="Product Information"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       Margin="0,0,0,12"/>

                            <TextBlock Text="Product Name" Style="{StaticResource LabelStyle}"/>
                            <TextBox x:Name="ProductNameTextBox" Style="{StaticResource InputStyle}"/>

                            <TextBlock Text="Description" Style="{StaticResource LabelStyle}"/>
                            <TextBox x:Name="DescriptionTextBox" Style="{StaticResource InputStyle}"
                                     Height="70"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"/>
                        </StackPanel>
                    </Border>

                    <!-- STOCK INFO -->
                    <Border Grid.Column="1"
                            Background="#10B981"
                            Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="Stock Information"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       Margin="0,0,0,12"/>

                            <TextBlock Text="Quantity" Style="{StaticResource LabelStyle}"/>
                            <TextBox x:Name="QuantityTextBox" Style="{StaticResource InputStyle}"/>

                            <TextBlock Text="Price" Style="{StaticResource LabelStyle}"/>
                            <TextBox x:Name="PriceTextBox" Style="{StaticResource InputStyle}"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- DELETE BUTTON -->
                <Button Content="Delete Product"
                        Width="220"
                        Height="50"
                        Background="#DC2626"
                        Foreground="White"
                        BorderBrush="Transparent"
                        CornerRadius="10"
                        FontSize="18"
                        HorizontalAlignment="Center"
                        Click="OnDeleteProductClicked"/>

            </StackPanel>
        </ScrollViewer>
    </Grid>

</Page>
