<Page
    x:Class="ShopMate.GUI.AdminDashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:ShopMate.GUI.Controls"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <Storyboard x:Name="CollapseSidebarStoryboard">
            <DoubleAnimation
                Storyboard.TargetName="SidebarColumn"
                Storyboard.TargetProperty="Width.Value"
                To="60"
                Duration="0:0:0.25"/>
        </Storyboard>

        <Storyboard x:Name="ExpandSidebarStoryboard">
            <DoubleAnimation
                Storyboard.TargetName="SidebarColumn"
                Storyboard.TargetProperty="Width.Value"
                To="220"
                Duration="0:0:0.25"/>
        </Storyboard>
    </Page.Resources>


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="SidebarColumn"
                              Width="170"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <controls:AdminSidebarControl Grid.Column="0"/>

        <ScrollViewer Grid.Column="1">
            <StackPanel Padding="40" Spacing="20">

                <TextBlock Text="Welcome!"
                           FontSize="32"
                           FontWeight="SemiBold"/>
                <TextBlock Text="Manage your inventory and staff."
                           FontSize="12"
                           Foreground="Gray"/>

                <Grid ColumnSpacing="20"
                      RowSpacing="20"
                      Margin="0,20,0,0">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Column="0" Grid.Row="0"
                            Background="#3B82F6"
                            CornerRadius="18"
                            Padding="20">
                        <StackPanel>
                            <TextBlock Text="Manage Customers"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       FontSize="20"/>

                            <TextBlock Text="Manage all of your customers."
                                       Foreground="White"
                                       FontSize="13"
                                       Margin="0,4,0,10"/>

                            <Button Content="Get Started"
                                    Padding="8,4"
                                    Background="#20FFFFFF"
                                    Foreground="White"
                                    BorderBrush="Transparent"
                                    Click="OnManageCustomersClicked"
                                    CornerRadius="6"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="1" Grid.Row="0"
                            Background="#10B981"
                            CornerRadius="18"
                            Padding="20">
                        <StackPanel>
                            <TextBlock Text="Manage Products"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       FontSize="20"/>

                            <TextBlock Text="Manage your inventory."
                                       Foreground="White"
                                       FontSize="13"                              
                                       Margin="0,4,0,10"/>

                            <Button Content="Get Started"
                                    Padding="8,4"
                                    Background="#20FFFFFF"
                                    Foreground="White"
                                    BorderBrush="Transparent"
                                    Click="OnManageProductsClicked"
                                    CornerRadius="6"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="0" Grid.Row="1"
                            Background="#EF4444"
                            CornerRadius="18"
                            Padding="20">
                        <StackPanel>
                            <TextBlock Text="Manage Staff"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       FontSize="20"/>

                            <TextBlock Text="Manage your employees."
                                       Foreground="White"
                                       FontSize="13"
                                       Margin="0,4,0,10"/>

                            <Button Content="Get Started"
                                    Tag="Implement"
                                    Padding="8,4"
                                    Background="#20FFFFFF"
                                    Foreground="White"
                                    BorderBrush="Transparent"
                                    Click="OnManageEmployeesClicked"
                                    CornerRadius="6"/>
                        </StackPanel>
                    </Border>

                    <!--<Border Grid.Column="1" Grid.Row="1"
                            Background="#F59E0B"
                            CornerRadius="18"
                            Padding="20">
                        <StackPanel>
                            <TextBlock Text="Sales Report"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       FontSize="20"/>

                            <TextBlock Text="Monthly sales report"
                                       Foreground="White"
                                       FontSize="13"
                                       Margin="0,4,0,10"/>

                            <Button Content="View Reports"
                                    Padding="8,4"
                                    Background="#20FFFFFF"
                                    Foreground="White"
                                    BorderBrush="Transparent"
                                    Click="OnGenerateReportClicked"
                                    CornerRadius="6"/>
                        </StackPanel>
                    </Border>-->

                </Grid>

            </StackPanel>
        </ScrollViewer>

    </Grid>
</Page>