<Page
    x:Class="ShopMate.GUI.SalesAddProduct"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:ShopMate.GUI.Controls"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>

        <!-- LABEL -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,8,0,4"/>
        </Style>

        <!-- DARK INPUT TEXTBOX -->
        <Style x:Key="InputStyle" TargetType="TextBox">
            <Setter Property="BorderBrush" Value="#3A3D40"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Background" Value="#1F2123"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <!-- DARK NUMBER BOX -->
        <Style x:Key="NumberBoxStyle" TargetType="NumberBox">
            <Setter Property="BorderBrush" Value="#3A3D40"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Background" Value="#1F2123"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <!-- DARK CARD PANEL -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Background" Value="#1A1C1E"/>
            <Setter Property="BorderBrush" Value="#2A2D31"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

    </Page.Resources>


    <!-- MAIN GRID -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="SidebarColumn" Width="170"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR -->
        <controls:SalesSidebarControl Grid.Column="0"/>

        <!-- PAGE CONTENT -->
        <ScrollViewer Grid.Column="1">
            <StackPanel Padding="40" Spacing="20">

                <!-- PAGE TITLE -->
                <Grid ColumnSpacing="10" VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- BACK BUTTON -->
                    <Button Width="32"
                            Height="32"
                            Background="#1F2123"
                            BorderBrush="#3A3D40"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="0"
                            Click="OnBackClicked">
                        <Image Source="ms-appx:///Assets/Icons/back.png"
                               Width="20" Height="20"/>
                    </Button>

                    <!-- TITLE -->
                    <TextBlock Grid.Column="1"
                               Text="Add Product"
                               FontSize="28"
                               FontWeight="SemiBold"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                </Grid>

                <TextBlock Text="Enter the product details below."
                           FontSize="13"
                           Foreground="#9CA3AF"/>

                <!-- 2-COLUMN FORM -->
                <Grid ColumnSpacing="20" RowSpacing="20" Margin="0,10,0,0">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- PRODUCT INFO -->
                    <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                        <StackPanel>

                            <TextBlock Text="Product Information"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="White"
                                       Margin="0,0,0,8"/>

                            <TextBlock Text="Product Name" Style="{StaticResource LabelStyle}"/>
                            <TextBox x:Name="ProductNameTextBox" Style="{StaticResource InputStyle}"/>

                            <TextBlock Text="Description" Style="{StaticResource LabelStyle}"/>
                            <TextBox x:Name="DescriptionTextBox"
                                     Style="{StaticResource InputStyle}"
                                     Height="70"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"/>

                            <!-- EXPIRY -->
                            <StackPanel Orientation="Horizontal" Spacing="12" Margin="0,10,0,0">
                                <CheckBox x:Name="HasExpiryCheckBox"
                                          Content="Has expiry?"
                                          Foreground="White"
                                          Checked="HasExpiryCheckBox_Checked"
                                          Unchecked="HasExpiryCheckBox_Unchecked"/>

                                <DatePicker x:Name="ExpiryDatePicker"
                                            Width="300"
                                            Height="30"
                                            IsEnabled="False"/>
                            </StackPanel>

                        </StackPanel>
                    </Border>

                    <!-- STOCK INFO -->
                    <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                        <StackPanel>

                            <TextBlock Text="Stock Information"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="White"
                                       Margin="0,0,0,8"/>

                            <TextBlock Text="Quantity" Style="{StaticResource LabelStyle}"/>
                            <NumberBox x:Name="QuantityNumberBox"
                                       Style="{StaticResource NumberBoxStyle}"
                                       Minimum="0"
                                       Maximum="100000"
                                       Value="0"
                                       SpinButtonPlacementMode="Inline"/>

                            <TextBlock Text="Price" Style="{StaticResource LabelStyle}"/>
                            <NumberBox x:Name="PriceNumberBox"
                                       Style="{StaticResource NumberBoxStyle}"
                                       Minimum="0"
                                       Maximum="100000"
                                       Value="0"
                                       SmallChange="0.1"
                                       LargeChange="10"/>

                        </StackPanel>
                    </Border>

                </Grid>


                <!-- SAVE BUTTON -->
                <Button Content="Add Product"
                        Width="200"
                        Height="48"
                        Background="#3B82F6"
                        Foreground="White"
                        BorderBrush="Transparent"
                        CornerRadius="8"
                        FontSize="16"
                        HorizontalAlignment="Center"
                        Click="OnAddProductClicked"/>

            </StackPanel>
        </ScrollViewer>

    </Grid>

</Page>