<Page
    x:Class="ShopMate.GUI.SalesPersonGUI.SalesViewInventory"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ShopMate.GUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:ShopMate.GUI.Controls"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Page.Resources>

        <local:ExpiryDateConverter x:Key="ExpiryDateConverter"/>

        <!-- TABLE HEADER LABEL -->
        <Style x:Key="HeaderLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <!-- ROW TEXT -->
        <Style x:Key="RowText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

    </Page.Resources>


    <!-- MAIN GRID -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="SidebarColumn" Width="170"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR -->
        <controls:SalesSidebarControl Grid.Column="0"/>

        <!-- MAIN CONTENT -->
        <ScrollViewer Grid.Column="1">
            <StackPanel Padding="40" Spacing="20">

                <!-- BACK + TITLE -->
                <Grid ColumnSpacing="10" VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Back Button -->
                    <Button Width="32"
                            Height="32"
                            Background="#1F2123"
                            BorderBrush="#3A3D40"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="0"
                            Click="OnBackClicked">
                        <Image Source="ms-appx:///Assets/Icons/back.png"
                               Width="20" Height="20"/>
                    </Button>

                    <!-- Title -->
                    <TextBlock Grid.Column="1"
                               Text="Inventory"
                               FontSize="28"
                               FontWeight="SemiBold"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                </Grid>

                <TextBlock Text="List of all available products."
                           FontSize="13"
                           Foreground="#9CA3AF"/>


                <!-- TABLE HEADER -->
                <Grid ColumnSpacing="10" Margin="0,20,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Product Name" Style="{StaticResource HeaderLabel}"/>
                    <TextBlock Text="Stock" Grid.Column="1" Style="{StaticResource HeaderLabel}"/>
                    <TextBlock Text="Price" Grid.Column="2" Style="{StaticResource HeaderLabel}"/>
                    <TextBlock Text="Expiry" Grid.Column="3" Style="{StaticResource HeaderLabel}"/>
                    <TextBlock Text="Description" Grid.Column="4" Style="{StaticResource HeaderLabel}"/>
                </Grid>

                <!-- HEADER SEPARATOR -->
                <Rectangle Height="1" Fill="#2A2D31"/>


                <!-- TABLE ROWS -->
                <ItemsRepeater x:Name="ProductsRepeater">
                    <ItemsRepeater.Layout>
                        <StackLayout Orientation="Vertical" Spacing="4"/>
                    </ItemsRepeater.Layout>

                    <ItemsRepeater.ItemTemplate>
                        <DataTemplate>
                            <Grid ColumnSpacing="10" Padding="10" CornerRadius="6">

                                <!-- Alternating row color -->
                                <Grid.Background>
                                    <SolidColorBrush Color="{Binding RowColor}"/>
                                </Grid.Background>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="1.5*"/>
                                    <ColumnDefinition Width="3*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="{Binding Name}" Style="{StaticResource RowText}"/>

                                <TextBlock Text="{Binding Stock}"
                                           Grid.Column="1"
                                           Style="{StaticResource RowText}"/>

                                <TextBlock Text="{Binding Price}"
                                           Grid.Column="2"
                                           Style="{StaticResource RowText}"/>

                                <TextBlock Text="{Binding ExpiryDate, Converter={StaticResource ExpiryDateConverter}}"
                                           Grid.Column="3"
                                           Style="{StaticResource RowText}"/>

                                <TextBlock Text="{Binding Description}"
                                           Grid.Column="4"
                                           TextWrapping="Wrap"
                                           Style="{StaticResource RowText}"/>
                            </Grid>
                        </DataTemplate>
                    </ItemsRepeater.ItemTemplate>
                </ItemsRepeater>

            </StackPanel>
        </ScrollViewer>
    </Grid>

</Page>