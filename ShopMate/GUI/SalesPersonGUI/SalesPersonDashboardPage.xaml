<Page
    x:Class="ShopMate.GUI.SalesPersonDashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:ShopMate.GUI.Controls"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <!-- SIDEBAR + MAIN CONTENT -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="SidebarColumn" Width="170" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR -->
        <controls:SalesSidebarControl Grid.Column="0" />

        <!-- MAIN CONTENT -->
        <ScrollViewer Grid.Column="1">
            <StackPanel Padding="50" Spacing="28">

                <!-- Welcome -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- LEFT SIDE: Greeting -->
                    <StackPanel>
                        <TextBlock x:Name="WelcomeTitle"
                                   Text="Welcome back,"
                                   FontSize="26"
                                   FontWeight="Light"
                                   FontFamily="Inter"
                                   Foreground="GhostWhite"/>

                        <TextBlock Text="Sales Person"
                                   FontSize="17"
                                   Foreground="#7A7F85"
                                   FontWeight="Light"
                                   Margin="0,5,0,0"/>

                    </StackPanel>

                    <StackPanel Grid.Column="1"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Spacing="2">

                        <TextBlock x:Name="DashboardDay"
                                   FontSize="26"
                                   FontWeight="Light"
                                   FontFamily="Inter"
                                   Foreground="White"
                                   HorizontalAlignment="Right"/>

                        <TextBlock x:Name="DashboardDate"
                                   FontSize="14"
                                   FontWeight="Light"
                                   Foreground="#7A7F85"
                                   HorizontalAlignment="Right"/>
                    </StackPanel>
                </Grid>

                <TextBlock Text="Quick Actions"
                           FontSize="20"
                           Foreground="White"
                           Margin="0,0,0,0"/>

                <!-- ACTION ROWS -->
                <StackPanel Spacing="8" Margin="0,0,0,0">

                    <!-- GENERATE BILL -->
                    <Button Click="OnGenerateBillClicked"
                            Background="Transparent"
                            BorderThickness="0"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Stretch"
                            Padding="0">

                        <StackPanel HorizontalAlignment="Stretch">
                            <Grid Padding="16" HorizontalAlignment="Stretch">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <Image Source="ms-appx:///Assets/Icons/bill.png"
                                       Width="28"
                                       Height="28"
                                       VerticalAlignment="Center"/>

                                <StackPanel Grid.Column="1"
                                            Margin="14,0,0,0"
                                            VerticalAlignment="Center">
                                    <TextBlock Text="Generate Bill"
                                               FontSize="18"
                                               FontWeight="Light" />
                                    <TextBlock Text="Create a new bill and receipt"
                                               FontSize="13"
                                               Foreground="#6B7280" />
                                </StackPanel>

                                <TextBlock Text="›"
                                           Grid.Column="2"
                                           FontSize="24"
                                           FontWeight="Light"
                                           Foreground="#9CA3AF"
                                           VerticalAlignment="Center" />
                            </Grid>

                            <Rectangle Height="1" Fill="#4B4F54" />
                        </StackPanel>

                    </Button>

                    <!-- Update Stock -->
                    <Button Click="OnUpdateStockClicked"
                            Background="Transparent"
                            BorderThickness="0"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Stretch"
                            Padding="0">

                        <StackPanel HorizontalAlignment="Stretch">
                            <Grid Padding="16" HorizontalAlignment="Stretch">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <Image Source="ms-appx:///Assets/Icons/update_stock.png"
                                       Width="28"
                                       Height="28"
                                       VerticalAlignment="Center"/>

                                <StackPanel Grid.Column="1"
                                            Margin="14,0,0,0"
                                            VerticalAlignment="Center">
                                    <TextBlock Text="Update Stock"
                                               FontSize="18"
                                               FontWeight="Light" />
                                    <TextBlock Text="Update the Stock quantity for products"
                                               FontSize="13"
                                               FontWeight="Light"
                                               Foreground="#6B7280" />
                                </StackPanel>

                                <TextBlock Text="›"
                                           Grid.Column="2"
                                           FontSize="24"
                                           Foreground="#9CA3AF"
                                           VerticalAlignment="Center" />
                            </Grid>

                            <Rectangle Height="1" Fill="#4B4F54" />
                        </StackPanel>
                    </Button>

                    <!-- ADD CUSTOMER -->
                    <Button Click="OnAddCustomerClicked"
                            Background="Transparent"
                            BorderThickness="0"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Stretch"
                            Padding="0">

                        <StackPanel HorizontalAlignment="Stretch">
                            <Grid Padding="16" HorizontalAlignment="Stretch">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <Image Source="ms-appx:///Assets/Icons/add_customer.png"
                                       Width="28"
                                       Height="28"
                                       VerticalAlignment="Center"/>

                                <StackPanel Grid.Column="1"
                                            Margin="14,0,0,0"
                                            VerticalAlignment="Center">
                                    <TextBlock Text="Add Customer"
                                               FontSize="18"
                                               FontWeight="Light" />
                                    <TextBlock Text="Register a new customer"
                                               FontSize="13"
                                               FontWeight="Light"
                                               Foreground="#6B7280" />
                                </StackPanel>

                                <TextBlock Text="›"
                                           Grid.Column="2"
                                           FontSize="24"
                                           Foreground="#9CA3AF"
                                           VerticalAlignment="Center" />
                            </Grid>

                            <Rectangle Height="1" Fill="#4B4F54" />
                        </StackPanel>

                    </Button>

                    <!-- ADD PRODUCT -->
                    <Button Click="OnAddProductClicked"
                            Background="Transparent"
                            BorderThickness="0"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Stretch"
                            Padding="0">

                        <StackPanel HorizontalAlignment="Stretch">
                            <Grid Padding="16" HorizontalAlignment="Stretch">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <Image Source="ms-appx:///Assets/Icons/add_prod.png"
                                       Width="28"
                                       Height="28"
                                       VerticalAlignment="Center"/>

                                <StackPanel Grid.Column="1"
                                            Margin="14,0,0,0"
                                            VerticalAlignment="Center">
                                    <TextBlock Text="Add Product"
                                               FontSize="18"
                                               FontWeight="Light" />
                                    <TextBlock Text="Add products for sale"
                                               FontSize="13"
                                               FontWeight="Light"
                                               Foreground="#6B7280" />
                                </StackPanel>

                                <TextBlock Text="›"
                                           Grid.Column="2"
                                           FontSize="24"
                                           Foreground="#9CA3AF"
                                           VerticalAlignment="Center" />
                            </Grid>

                            <Rectangle Height="1" Fill="#4B4F54" />
                        </StackPanel>
                    </Button>

                </StackPanel>

            </StackPanel>
        </ScrollViewer>

    </Grid>
</Page>