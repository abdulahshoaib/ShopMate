<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="ShopMate.GUI.SalesPersonGUI.SalesSettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ShopMate.GUI.SalesPersonGUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:ShopMate.GUI.Controls"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <!-- Card Style (same as other pages) -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#1A1C1E"/>
            <Setter Property="BorderBrush" Value="#2A2D31"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
        </Style>

        <!-- Input Style -->
        <Style x:Key="InputStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#1F2123"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3A3D40"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="PasswordInputStyle" TargetType="PasswordBox">
            <Setter Property="Background" Value="#1F2123"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3A3D40"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="170"/>
            <!-- Sidebar -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR -->
        <controls:SalesSidebarControl Grid.Column="0"/>


        <!-- MAIN CONTENT -->
        <ScrollViewer Grid.Column="1">
            <StackPanel Padding="40" Spacing="20">

                <!-- BACK + TITLE -->
                <Grid ColumnSpacing="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Width="32"
                            Height="32"
                            Background="#1F2123"
                            BorderBrush="#3A3D40"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="0"
                            Click="OnBackClicked">
                        <Image Source="ms-appx:///Assets/Icons/back.png"
                               Width="20" Height="20"/>
                    </Button>

                    <TextBlock Text="Settings"
                               Grid.Column="1"
                               FontSize="28"
                               FontWeight="SemiBold"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                </Grid>

                <TextBlock Text="Manage your profile, account and employee details."
                           FontSize="13"
                           Foreground="#9CA3AF"/>


                <!-- PROFILE INFORMATION -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel Spacing="12">

                        <TextBlock Text="Profile Information"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Foreground="White"/>

                        <TextBox x:Name="UsernameTextBox"
                                 Header="Username"
                                 Style="{StaticResource InputStyle}"
                                 Width="300"/>

                        <TextBox x:Name="NameTextBox"
                                 Header="Full Name"
                                 Style="{StaticResource InputStyle}"
                                 Width="300"/>

                        <TextBox x:Name="PhoneTextBox"
                                 Header="Phone Number"
                                 Style="{StaticResource InputStyle}"
                                 Width="300"/>

                        <TextBox x:Name="AddressTextBox"
                                 Header="Address"
                                 Style="{StaticResource InputStyle}"
                                 Width="300"/>
                    </StackPanel>
                </Border>


                <!-- PASSWORD CHANGE -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel Spacing="12">

                        <TextBlock Text="Change Password"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Foreground="White"/>

                        <PasswordBox x:Name="OldPasswordBox"
                                     Header="Current Password"
                                     Style="{StaticResource PasswordInputStyle}"
                                     Width="300"/>

                        <PasswordBox x:Name="NewPasswordBox"
                                     Header="New Password"
                                     Style="{StaticResource PasswordInputStyle}"
                                     Width="300"/>

                        <PasswordBox x:Name="ConfirmPasswordBox"
                                     Header="Confirm New Password"
                                     Style="{StaticResource PasswordInputStyle}"
                                     Width="300"/>

                    </StackPanel>
                </Border>


                <!-- SAVE BUTTON -->
                <Button Content="Save Changes"
                        Width="180"
                        Background="#3B82F6"
                        Foreground="White"
                        BorderBrush="Transparent"
                        CornerRadius="6"
                        Padding="10,8"
                        Click="SaveButton_Click"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>