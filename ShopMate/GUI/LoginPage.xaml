<Page
    x:Class="ShopMate.GUI.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0A1F44" Offset="0"/>
                <GradientStop Color="#081A36" Offset="0.4"/>
                <GradientStop Color="#061427" Offset="0.75"/>
                <GradientStop Color="#040E1A" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <StackPanel Spacing="28" HorizontalAlignment="Center" VerticalAlignment="Center">

            <!-- Logo -->
            <Image Source="/Assets/StoreLogo.png"
                   Width="200" Height="200"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"/>

            <!-- Form -->
            <StackPanel Spacing="15">

                <TextBox x:Name="UsernameTextBox"
                         PlaceholderText="Username"
                         Height="50"
                         Width="300"
                         FontSize="16"
                         Padding="12"
                         BorderBrush="Black"
                         BorderThickness="1"
                         Background="#494B4E"
                         CornerRadius="10"/>

                <PasswordBox x:Name="PasswordBox"
                             PlaceholderText="Password"
                             Height="50"
                             Width="300"
                             FontSize="16"
                             Padding="12"
                             BorderBrush="Black"
                             BorderThickness="1"
                             Background="#494B4E"
                             CornerRadius="10"/>

                <TextBlock x:Name="ErrorTextBlock"
                           Foreground="Red"
                           FontSize="13"
                           Visibility="Collapsed"/>

                <Button Content="Sign In"
                        Width="100"
                        Height="50"
                        Background="#4A67F6"
                        Foreground="White"
                        FontSize="18"
                        CornerRadius="12"
                        FontWeight="SemiBold"
                        Margin="0,8,0,0"
                        HorizontalAlignment="Center"
                        Click="OnSignInClicked"/>
            </StackPanel>

           
        </StackPanel>
    </Grid>
</Page>
