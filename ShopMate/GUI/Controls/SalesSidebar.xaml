<UserControl
    x:Class="ShopMate.GUI.Controls.SalesSidebarControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Background="#111827" Width="220">

        <StackPanel Padding="10" Spacing="15">

            <!-- Resources MUST be first -->
            <StackPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="Width" Value="180"/>
                    <Setter Property="Height" Value="38"/>
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="Foreground" Value="#F3F4F6"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Setter Property="HorizontalAlignment" Value="Left"/>
                </Style>
            </StackPanel.Resources>

            <!-- Title -->
            <TextBlock Text="ShopMate"
                       Foreground="#E5E7EB"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Margin="0,10,0,10"/>

            <!-- Buttons -->
            <Button Content="Dashboard" Click="OnDashboardClicked"/>
            <Button Content="Generate Bill" Click="OnGenerateBillClicked"/>
            <Button Content="Generate Report" Click="OnGenerateReportClicked"/>
            <Button Content="Add Customer" Click="OnAddCustomerClicked"/>
            <Button Content="Add Product" Click="OnAddProductClicked"/>
            <Button Content="Settings" Click="OnSettingsClicked"/>

            <Rectangle Height="1"
                       Fill="#1F2937"
                       Margin="0,15,0,15"/>

            <Button Content="Sign Out"
                    Foreground="#EF4444"
                    Click="OnSignOutClicked"/>

        </StackPanel>
    </Grid>
</UserControl>