<UserControl
    x:Class="ShopMate.GUI.Controls.SalesSidebarControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="SidebarColumn" Width="170"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR -->
        <Grid Grid.Column="0" Background="#111827">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- =======================
                 TOP SECTION
            ======================== -->
            <StackPanel Padding="10" Spacing="15" Grid.Row="0">

                <!-- Header -->
                <Grid Margin="0,10,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="40"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Sales Panel"
                               x:Name="SidebarTitle"
                               Foreground="#E5E7EB"
                               FontSize="14"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"/>
                </Grid>

                <!-- Menu Buttons -->
                <StackPanel Spacing="10">
                    <StackPanel.Resources>
                        <Style TargetType="Button">
                            <Setter Property="Width" Value="150"/>
                            <Setter Property="Height" Value="38"/>
                            <Setter Property="FontSize" Value="14"/>
                            <Setter Property="Foreground" Value="#F3F4F6"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderBrush" Value="#1F2937"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="CornerRadius" Value="10" />
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="Padding" Value="12,5"/>
                        </Style>
                    </StackPanel.Resources>

                    <Button Content="Dashboard" Click="OnDashboardClicked"/>
                    <Button Content="Generate Bill" Click="OnGenerateBillClicked"/>
                    <Button Content="Add Customer" Click="OnAddCustomerClicked"/>
                    <Button Content="Add Product" Click="OnAddProductClicked"/>
                    <Button Content="View Inventory" Click="OnViewInventorClicked"/>
                </StackPanel>
                
            </StackPanel>


            <StackPanel Grid.Row="1" Padding="10" Spacing="10">
                <Rectangle Height="1"
                           Fill="#1F2937"
                           Margin="0,0,0,5"/>
                <Button Content="Sign Out"
                        Click="OnSignOutClicked"
                        Foreground="#EF4444"
                        Width="150"
                        Height="38"
                        HorizontalAlignment="Left"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Padding="12,5"/>
            </StackPanel>

        </Grid>
    </Grid>
</UserControl>
