<UserControl
    x:Class="ShopMate.GUI.Controls.AdminSidebarControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="SidebarColumn" Width="170"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR -->
        <Grid Grid.Column="0" Background="#111827">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- MAIN SIDEBAR CONTENT -->
            <StackPanel Padding="10" Spacing="15" Grid.Row="0">

                <!-- Header -->
                <Grid Margin="0,10,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="SHOPMATE"
                               Foreground="#E5E7EB"
                               FontSize="18"
                               FontWeight="SemiBold"
                               CharacterSpacing="200"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Grid>

                <Rectangle Height="1"
                           Fill="#1F2937"
                           Margin="0,0,0,5"/>

                <!-- Menu Buttons -->
                <StackPanel Spacing="10">

                    <!-- Shared style -->
                    <StackPanel.Resources>
                        <Style TargetType="Button">
                            <Setter Property="Width" Value="150"/>
                            <Setter Property="Height" Value="38"/>
                            <Setter Property="FontSize" Value="13"/>
                            <Setter Property="Foreground" Value="#F3F4F6"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderBrush" Value="#1F2937"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="CornerRadius" Value="10"/>
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="Padding" Value="8,5"/>
                            <Setter Property="FontWeight" Value="Light"/>
                            <Setter Property="HorizontalContentAlignment" Value="Left"/>
                        </Style>
                    </StackPanel.Resources>

                    <!-- Dashboard -->
                    <Button Click="OnDashboardClicked">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <Image Source="ms-appx:///Assets/Icons/dashboard.png"
                   Width="20" Height="20"/>
                            <TextBlock Text="Dashboard"/>
                        </StackPanel>
                    </Button>

                    <!-- Manage Customers -->
                    <Button Click="OnManageCustomersClicked">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <Image Source="ms-appx:///Assets/Icons/add_customer.png"
                   Width="20" Height="20"/>
                            <TextBlock Text="Manage Customer"/>
                        </StackPanel>
                    </Button>

                    <!-- Product Management -->
                    <Button Click="OnManageProductsClicked">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <Image Source="ms-appx:///Assets/Icons/add_prod.png"
                   Width="20" Height="20"/>
                            <TextBlock Text="Manage Products"/>
                        </StackPanel>
                    </Button>

                    <!-- Employee Management -->
                    <Button Click="OnManageEmployeesClicked">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <Image Source="ms-appx:///Assets/Icons/add_prod.png"
                                   Width="20" Height="20"/>
                            <TextBlock Text="Manage Staff" FontSize="13"/>
                        </StackPanel>
                    </Button>

                    <!-- Report -->
                 
                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Row="1" Padding="10" Spacing="10">
                <StackPanel.Resources>
                    <Style TargetType="Button">
                        <Setter Property="Width" Value="150"/>
                        <Setter Property="Height" Value="38"/>
                        <Setter Property="FontSize" Value="13"/>
                        <Setter Property="Foreground" Value="#F3F4F6"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderBrush" Value="#1F2937"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="CornerRadius" Value="10"/>
                        <Setter Property="HorizontalAlignment" Value="Left"/>
                        <Setter Property="Padding" Value="8,5"/>
                        <Setter Property="FontWeight" Value="Light"/>
                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                    </Style>
                </StackPanel.Resources>

                <Rectangle Height="1"
                           Fill="#1F2937"
                           Margin="0,0,0,5"/>

                <!-- Settings -->
                <Button Click="OnSettingsClicked">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <Image Source="ms-appx:///Assets/Icons/settings.png"
                               Width="20" Height="20"/>
                        <TextBlock Text="Settings"/>
                    </StackPanel>
                </Button>

                <!-- Sign Out -->
                <Button Click="OnSignOutClicked">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <Image Source="ms-appx:///Assets/Icons/logout.png"
                               Width="20" Height="20"/>
                        <TextBlock Text="Sign Out"/>
                    </StackPanel>
                </Button>

            </StackPanel>

        </Grid>
    </Grid>
</UserControl>