<UserControl
    x:Class="ShopMate.GUI.Controls.AdminSidebarControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Background="#111827">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ===========================
             TOP SECTION
        ============================ -->
        <StackPanel Padding="10" Spacing="15" Grid.Row="0">

            <!-- Header -->
            <Grid Margin="0,10,0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Admin Panel"
                           Foreground="#E5E7EB"
                           FontSize="12"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"/>
            </Grid>

            <!-- Main Buttons -->
            <StackPanel Spacing="10">

                <StackPanel.Resources>
                    <Style TargetType="Button">
                        <Setter Property="Width" Value="150"/>
                        <Setter Property="Height" Value="38"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="Foreground" Value="#F3F4F6"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="HorizontalAlignment" Value="Left"/>
                        <Setter Property="Padding" Value="12,5"/>
                    </Style>
                </StackPanel.Resources>

                <Button Content="Dashboard" Click="OnDashboardClicked"/>
                <Button Content="Manage Staff" Click="OnManageEmployeesClicked"/>
                <Button Content="Manage Customers" Click="OnManageCustomersClicked"/>
                <Button Content="Manage Products" Click="OnManageProductsClicked"/>

            </StackPanel>
            <Rectangle Height="1"
                       Fill="#1F2937"
                       Margin="0,0,0,5"/>
        </StackPanel>


        <StackPanel Grid.Row="1" Padding="10" Spacing="10">

            

            <Button Content="Sign Out"
                    Foreground="#EF4444"
                    HorizontalAlignment="Left"
                    Width="150"
                    Height="38"
                    Padding="12,5"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    FontSize="14"
                    Click="OnSignOutClicked"/>
        </StackPanel>

    </Grid>

</UserControl>
