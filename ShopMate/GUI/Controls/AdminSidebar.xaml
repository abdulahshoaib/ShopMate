<UserControl
    x:Class="ShopMate.GUI.Controls.AdminSidebarControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Background="#111827">

        <StackPanel Padding="10" Spacing="15">

            <!-- Header -->
            <Grid Margin="0,10,0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Admin Panel"
                           Foreground="#E5E7EB"
                           FontSize="12"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"/>
            </Grid>

            <!-- Main Buttons -->
            <StackPanel Spacing="10">

                <StackPanel.Resources>
                    <Style TargetType="Button">
                        <Setter Property="Width" Value="150"/>
                        <Setter Property="Height" Value="38"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="Foreground" Value="#F3F4F6"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="HorizontalAlignment" Value="Left"/>
                        <Setter Property="Padding" Value="12,5"/>
                    </Style>
                </StackPanel.Resources>

                <Button Content="Dashboard" Click="OnDashboardClicked"/>
                <Button Content="Generate Report" Click="OnGenerateReportClicked"/>
                <Button Content="Manage Staff" Click="OnManageEmployeesClicked"/>
                <Button Content="Manage Customers" Click="OnManageCustomersClicked"/>
                <Button Content="Manage Products" Click="OnManageProductsClicked"/>

                <!-- Divider + Settings -->
                <StackPanel Spacing="10" Margin="0,0,0,20">
                    <Rectangle Height="1"
                               Fill="#1F2937"
                               Margin="0,0,0,10"/>

                    <Button Content="Settings" Click="OnSettingsClicked"/>
                    <Button Content="Sign Out"
                            Foreground="#EF4444"
                            Click="OnSignOutClicked"/>
                </StackPanel>

            </StackPanel>

        </StackPanel>

    </Grid>

</UserControl>