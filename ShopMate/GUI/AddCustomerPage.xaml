<Page
    x:Class="ShopMate.GUI.AddCustomerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:ShopMate.GUI.Controls"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <!-- Animations for sidebar toggle (kept consistent with GenerateBillPage) -->
    <Page.Resources>
        <Storyboard x:Name="CollapseSidebarStoryboard">
            <DoubleAnimation Storyboard.TargetName="SidebarColumn"
                             Storyboard.TargetProperty="Width.Value"
                             To="60"
                             Duration="0:0:0.25"/>
        </Storyboard>

        <Storyboard x:Name="ExpandSidebarStoryboard">
            <DoubleAnimation Storyboard.TargetName="SidebarColumn"
                             Storyboard.TargetProperty="Width.Value"
                             To="220"
                             Duration="0:0:0.25"/>
        </Storyboard>

        <!-- Reusable style used across pages (kept for consistency) -->
        <Style x:Key="ListViewItemStretchStyle" TargetType="ListViewItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="SidebarColumn" Width="170"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar Control (same placement as GenerateBillPage) -->
        <controls:SalesSidebarControl Grid.Column="0"/>

        <!-- MAIN CONTENT -->
        <ScrollViewer Grid.Column="1">
            <StackPanel Padding="40"
                        MaxWidth="720"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Spacing="20">

                <!-- Header (matches GenerateBillPage typography) -->
                <TextBlock Text="Add New Customer"
                           FontSize="32"
                           FontWeight="SemiBold"/>
                <TextBlock Text="Enter customer details below. Consistent colors and layout with other pages."
                           Foreground="Gray"
                           FontSize="12"/>

                <!-- Form card styled like GenerateBillPage panels -->
                <Border Background="#0B1220"
                        CornerRadius="12"
                        Padding="20">
                    <StackPanel Spacing="12">

                        <TextBlock Text="Customer Details"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Foreground="#E5E7EB"/>

                        <TextBlock Text="Provide name, contact and address information."
                                   FontSize="12"
                                   Foreground="Gray"/>

                        <!-- Two-column form for compact layout -->
                        <Grid ColumnSpacing="12" RowSpacing="10" Margin="0,6,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Header="Customer Name"
                                     x:Name="NameTextBox"
                                     Grid.Column="0"/>

                            <TextBox Header="Phone Number"
                                     x:Name="PhoneTextBox"
                                     Grid.Column="1"/>
                        </Grid>

                        <!-- Email and Address full width -->
                        <TextBox Header="Email Address"
                                 x:Name="EmailTextBox"/>

                        <TextBox Header="Address"
                                 x:Name="AddressTextBox"
                                 AcceptsReturn="True"
                                 Height="120"/>

                        <!-- Optional notes -->
                        <TextBox Header="Notes (optional)"
                                 x:Name="NotesTextBox"
                                 AcceptsReturn="True"
                                 Height="80"/>

                        <!-- Action buttons (primary blue + subtle cancel) -->
                        <StackPanel Orientation="Horizontal" Spacing="15" Margin="0,6,0,0">
                            <Button Content="Save Customer"
                                    Click="SaveCustomer_Click"
                                    Background="#3B82F6"
                                    Foreground="White"
                                    BorderBrush="Transparent"
                                    Padding="14,6"
                                    CornerRadius="6"/>

                            <Button Content="Cancel"
                                    Click="Cancel_Click"
                                    Background="Transparent"
                                    Foreground="#D1D5DB"
                                    BorderBrush="#334155"
                                    Padding="14,6"
                                    CornerRadius="6"/>
                        </StackPanel>

                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

    </Grid>
</Page>