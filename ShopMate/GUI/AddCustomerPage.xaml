<Page
    x:Class="ShopMate.GUI.AddCustomerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:ShopMate.GUI.Controls"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <!-- Smooth collapse animation -->
        <Storyboard x:Name="CollapseSidebarStoryboard">
            <DoubleAnimation Storyboard.TargetName="SidebarColumn"
                             Storyboard.TargetProperty="Width.Value"
                             To="60"
                             Duration="0:0:0.25"/>
        </Storyboard>

        <!-- Smooth expand animation -->
        <Storyboard x:Name="ExpandSidebarStoryboard">
            <DoubleAnimation Storyboard.TargetName="SidebarColumn"
                             Storyboard.TargetProperty="Width.Value"
                             To="170"
                             Duration="0:0:0.25"/>
        </Storyboard>
    </Page.Resources>

    <Grid>

        <!-- Sidebar + Main Content -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="SidebarColumn"
                              Width="170"/>
            <!-- Same width as dashboard -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar Control (Same placement as dashboard) -->
        <controls:SalesSidebarControl Grid.Column="0"/>

        <!-- MAIN CONTENT -->
        <ScrollViewer Grid.Column="1">
            <StackPanel Padding="40"
                        MaxWidth="600"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Spacing="20">

                <!-- Title -->
                <TextBlock Text="Add New Customer"
                           FontSize="32"
                           FontWeight="SemiBold"/>

                <TextBlock Text="Fill in the customer details below"
                           Foreground="Gray"
                           FontSize="12"/>

                <!-- Customer Inputs -->
                <TextBox Header="Customer Name" x:Name="NameTextBox"/>
                <TextBox Header="Phone Number" x:Name="PhoneTextBox"/>
                <TextBox Header="Email Address" x:Name="EmailTextBox"/>
                <TextBox Header="Address"
                         x:Name="AddressTextBox"
                         AcceptsReturn="True"
                         Height="120"/>

                <!-- Buttons -->
                <StackPanel Orientation="Horizontal" Spacing="15">
                    <Button Content="Save Customer"
                            Click="SaveCustomer_Click"
                            Padding="14,6"/>

                    <Button Content="Cancel"
                            Click="Cancel_Click"
                            Padding="14,6"/>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>

    </Grid>
</Page>