<Page
    x:Class="ShopMate.Pages.GenerateBillPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="40">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left: Customer & Products -->
        <StackPanel Grid.Column="0" Spacing="15">
            <TextBlock Text="Generate Bill" FontSize="28" FontWeight="SemiBold"/>
            <ComboBox Header="Select Customer" x:Name="CustomerComboBox"/>

            <StackPanel Orientation="Horizontal" Spacing="10">
                <ComboBox Header="Select Product" x:Name="ProductComboBox" Width="250"/>
                <TextBox Header="Quantity" x:Name="QuantityTextBox" Width="100"/>
                <Button Content="Add to Bill" Click="AddItem_Click"/>
            </StackPanel>

            <ListView x:Name="BillItemsListView" Height="300">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Product" DisplayMemberBinding="{Binding ProductName}"/>
                        <GridViewColumn Header="Price" DisplayMemberBinding="{Binding Price}"/>
                        <GridViewColumn Header="Qty" DisplayMemberBinding="{Binding Quantity}"/>
                        <GridViewColumn Header="Total" DisplayMemberBinding="{Binding Total}"/>
                        <GridViewColumn Header="Remove">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Remove" Click="RemoveItem_Click"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>

        <!-- Right: Bill Summary -->
        <StackPanel Grid.Column="1" Spacing="15">
            <TextBlock Text="Bill Summary" FontSize="24" FontWeight="SemiBold"/>
            <TextBlock x:Name="TotalItemsTextBlock"/>
            <TextBlock x:Name="SubtotalTextBlock"/>
            <TextBlock x:Name="TotalTextBlock" FontSize="20" FontWeight="Bold"/>
            <Button Content="Generate Bill" Click="GenerateBill_Click"/>
        </StackPanel>
    </Grid>
</Page>
