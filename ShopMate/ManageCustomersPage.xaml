<Page
    x:Class="ShopMate.Pages.ManageCustomersPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ShopMate.Pages"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer>
        <StackPanel Padding="40" Spacing="20">

            <!-- Back Button -->
            <Button Content="â† Back to Dashboard" Click="OnBackClicked" HorizontalAlignment="Left"/>

            <!-- Header Card -->
            <Border Background="#3B82F6" CornerRadius="10" Padding="20">
                <Grid ColumnDefinitions="*,Auto">
                    <TextBlock Text="Manage Customers" FontSize="28" FontWeight="Bold" Foreground="White"/>
                    <Button Content="+ Add Customer" Click="OnAddCustomerClicked" Background="White" Foreground="#3B82F6"/>
                </Grid>
            </Border>

            <!-- Search Bar -->
            <TextBox x:Name="SearchTextBox" PlaceholderText="Search customers..." Height="40" Margin="0,10"/>

            <!-- Customers List -->
            <ListView x:Name="CustomersListView" SelectionMode="None">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="local:Customer">
                        <Border CornerRadius="8" Padding="10" Margin="0,5" Background="White">
                            <Grid ColumnDefinitions="*,*,*,*,Auto" VerticalAlignment="Center">
                                <TextBlock Text="{x:Bind Name}" Grid.Column="0"/>
                                <TextBlock Text="{x:Bind Phone}" Grid.Column="1"/>
                                <TextBlock Text="{x:Bind Email}" Grid.Column="2"/>
                                <TextBlock Text="{x:Bind Address}" Grid.Column="3" TextTrimming="CharacterEllipsis"/>
                                <StackPanel Orientation="Horizontal" Grid.Column="4" Spacing="5">
                                    <Button Content="Edit" Click="OnEditCustomerClicked" Tag="{x:Bind Id}"/>
                                    <Button Content="Delete" Click="OnDeleteCustomerClicked" Tag="{x:Bind Id}" Background="#FEE2E2" Foreground="#B91C1C"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </StackPanel>
    </ScrollViewer>
</Page>