<Page
    x:Class="ShopMate.AddCustomerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="40">
        <StackPanel MaxWidth="600" HorizontalAlignment="Center" VerticalAlignment="Top" Spacing="20">
            <TextBlock Text="Add New Customer" FontSize="28" FontWeight="SemiBold"/>
            <TextBlock Text="Fill in the customer details below" Foreground="Gray"/>

            <TextBox Header="Customer Name" x:Name="NameTextBox"/>
            <TextBox Header="Phone Number" x:Name="PhoneTextBox"/>
            <TextBox Header="Email Address" x:Name="EmailTextBox"/>
            <TextBox Header="Address" x:Name="AddressTextBox" AcceptsReturn="True" Height="100"/>

            <StackPanel Orientation="Horizontal" Spacing="15">
                <Button Content="Save Customer" Click="SaveCustomer_Click" HorizontalAlignment="Stretch"/>
                <Button Content="Cancel" Click="Cancel_Click" HorizontalAlignment="Stretch"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
