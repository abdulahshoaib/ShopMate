<Page
    x:Class="ShopMate.Pages.SalesPersonDashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer>
        <StackPanel Padding="40" Spacing="20">

            <!-- Header -->
            <Grid ColumnDefinitions="*,Auto" Padding="10" Background="White">
                <TextBlock Text="ShopMate" FontSize="32" FontWeight="Bold" VerticalAlignment="Center"/>
                <Button Content="Logout" Click="OnLogoutClicked"/>
            </Grid>

            <!-- Welcome Text -->
            <TextBlock Text="Welcome back, [Username]!" FontSize="28" FontWeight="SemiBold"/>
            <TextBlock Text="What would you like to do today?" FontSize="16" Foreground="Gray"/>

            <!-- Quick Actions -->
            <Grid ColumnDefinitions="*,*,*" ColumnSpacing="20" RowSpacing="20">
                <Border Background="#3B82F6" CornerRadius="10" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Add Customer" FontWeight="Bold" Foreground="White" FontSize="16"/>
                        <TextBlock Text="Register a new customer" Foreground="White" FontSize="12"/>
                        <Button Content="Get Started" Click="OnAddCustomerClicked"/>
                    </StackPanel>
                </Border>

                <Border Background="#10B981" CornerRadius="10" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Add Product" FontWeight="Bold" Foreground="White" FontSize="16"/>
                        <TextBlock Text="Add products for quick sale" Foreground="White" FontSize="12"/>
                        <Button Content="Get Started" Click="OnAddProductClicked"/>
                    </StackPanel>
                </Border>

                <Border Background="#8B5CF6" CornerRadius="10" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Generate Bill" FontWeight="Bold" Foreground="White" FontSize="16"/>
                        <TextBlock Text="Create a new bill and receipt" Foreground="White" FontSize="12"/>
                        <Button Content="Get Started" Click="OnGenerateBillClicked"/>
                    </StackPanel>
                </Border>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</Page>
